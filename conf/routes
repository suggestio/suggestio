# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET  /                                  controllers.Application.index

# Раздача жабаскрипта.
GET  /js/v2/:domain/:qi_id              controllers.Js.v2(domain, qi_id)

# Map static resources from the /public folder to the /assets URL path
GET  /assets/*file                      controllers.Assets.at(path="/public", file)

GET  /thumb/get/$dkey<[-_\w\d~.]+>/$imageId<[\w\d]+>     controllers.Thumb.getThumb(dkey, imageId)
GET  /search                            controllers.Search.liveSearch(h:String, q:String, debug:Boolean ?= false, lang:String ?= "")

GET  /login/persona                     controllers.Ident.persona
POST /login/persona                     controllers.Ident.persona_submit
POST /logout                            controllers.Ident.logout

# Пункт меню "О проекте"
GET     /about                          controllers.Static.about

# Пункт меню "Вживую"
GET     /showcase                       controllers.Static.showcase

GET     /badbrowser                     controllers.Static.badbrowser

# Пункт меню "Блог"
GET     /blog                           controllers.Blog.recordList
GET     /blog/:id                       controllers.Blog.readOne(id:String)
GET     /blog/delete/:id                controllers.Blog.deleteRecAdmin(id:String)
GET     /blog/new/                       controllers.Blog.newRec
POST    /blog/new                       controllers.Blog.newRecS
GET     /blog/edit/:id                  controllers.Blog.editRec(id:String)
POST    /blog/edit/:id                  controllers.Blog.editRecS(id:String)

GET     /help                           controllers.Static.help
GET     /help/:page                     controllers.Static.helpPage(page:String)
