<ivysettings>
  <properties environment="env" />
  <properties file="${env.HOME}/.ivy2/.credentials"/>
  <settings defaultResolver="chain1" defaultResolveMode="dynamic" />
  <caches>
      <cache name="cache-origin" useOrigin="true" defaultTTL="0ms"/>
  </caches>
  <credentials host="${host}" realm="${realm}" username="${user}" passwd="${password}"/>
  <resolvers>
    <chain name="chain1">
      <filesystem name="local" changingPattern="-SNAPSHOT" local="true" cache="cache-origin">
	<ivy pattern="${env.HOME}/.ivy2/local/[organisation]/[module]/[revision]/ivy.xml"/>
	<artifact pattern="${env.HOME}/.ivy2/local/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
      </filesystem>
       
      <url name="cbca ivy2-internal" changingPattern="-SNAPSHOT">
	<ivy pattern="https://ivy2-internal.cbca.ru/sbt/[orgPath]/[module]/[revision]/[type]-[revision].xml"/>
	<artifact pattern="https://ivy2-internal.cbca.ru/sbt/[orgPath]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
      </url>

      <ibiblio name="conjas-releases" m2compatible="true" root="http://conjars.org/repo/"/>
      <ibiblio name="typesafe-releases" m2compatible="true" root="http://repo.typesafe.com/typesafe/releases" />
      <ibiblio name="sonatype-oss-releases" m2compatible="true" root="http://oss.sonatype.org/content/repositories/releases" />
      <ibiblio name="central-uk" m2compatible="true" root="http://uk.maven.org/maven2" />
      <ibiblio name="twitter-maven-repo" m2compatible="true" root="http://maven.twttr.com"/>
      <ibiblio name="apache-repo" m2compatible="true" root="https://repository.apache.org/content/repositories/releases"/>
      <ibiblio name="typesafe-snapshots" m2compatible="true" root="http://repo.typesafe.com/typesafe/snapshots" />
      <ibiblio name="sonatype-oss-snapshots" m2compatible="true" root="http://oss.sonatype.org/content/repositories/snapshots"/>
      <ibiblio name="local m2" m2compatible="true" root="file://${env.HOME}/.m2/repository"/>
    </chain>
  </resolvers>
</ivysettings>
