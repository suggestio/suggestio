/* Стили для страницы 404 */

body,
html
    padding: 0px
    margin:  0px
    width:   100%
    height:  100%

body
    background: #152D3B

@font-face
    font-family: 'pt_sans_narrowregular'
    src: url('/vassets/fonts/ptn57f-regular/ptn57f-regular.eot')
    src: url('/vassets/fonts/ptn57f-regular/ptn57f-regular.eot?#iefix') format('embedded-opentype'),
         url('/vassets/fonts/ptn57f-regular/ptn57f-regular.woff') format('woff'),
         url('/vassets/fonts/ptn57f-regular/ptn57f-regular.ttf') format('truetype')
    font-weight: normal
    font-style: normal

.error-explained
    position: absolute
    width: 400px
    height: 100px
    left: 50%; top: 50%
    margin-left: -200px; margin-top: -150px
    text-align: center

h1, h2
    color: #fff
    font-family: Arial
    font-family: "pt_sans_narrowregular"
    font-weight: normal

