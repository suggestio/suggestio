xfontface2( name )
  @font-face
    font-family: name
    src: url('/vassets/fonts/' + name + '/' + name + '.eot')
    src: url('/vassets/fonts/' + name + '/' + name + '.eot?#iefix') format('embedded-opentype'),
         url('/vassets/fonts/' + name + '/' + name + '.woff2') format('woff2'),
         url('/vassets/fonts/' + name + '/' + name + '.woff') format('woff'),
         url('/vassets/fonts/' + name + '/' + name + '.ttf') format('truetype')
    font-weight: normal
    font-style: normal

  // For quill wysiwyg editor: fonts support
  .ql-font-{name}
    font-family: name

  .ql-snow .ql-picker.ql-font
    .ql-picker-item[data-value={name}]::before, .ql-picker-label[data-value={name}]::before
      font-family: name
      content: name


