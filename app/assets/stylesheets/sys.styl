.sys
  font-size: 14px
  font-family: 'Arial'

  &_t
    margin: 25px 0
    font-family: 'PT_Sans-Narrow'
    ft(24px)
    color: #676666

strong
  font-weight: bold

siomBlueColor = #07a1ca

.blue-link
  color: siomBlueColor
  text-decoration: none
  border-bottom: 1px solid rgba(7, 161, 202, 0.3)
  transition(all 0.2s ease-in-out 0s)

  &:hover
    color: #276e98
    border-color: #c6c6c6

.color-strong
  color: #676666

.ovh
  overflow: hidden

.clear
  clear: both

.abs
  position: absolute
  top: 0
  left: 0

.f-left
  float: left

.f-right
  float: right

.border-line
  overflow: hidden
  width: 100%
  border-top: 1px solid #cbcbcb
  border-bottom: 1px solid #eeeeee

  &.__vertical
    width: 0
    margin-top: 5px
    border-left: 1px solid #cbcbcb
    border-right: 1px solid #eeeeee


.info-label
  overflow: hidden

  &.__outer
    margin-left: -30px

  &_icon
    float: left
    width: 7px /* Ширина и высота по размеру изображения */
    height: 38px
    background: url('/assets/images/market/lk/info-label-icon.png') no-repeat left center

  &_t
    padding-left: 25px
    float: left

    font-family: 'Arial'
    font-size: 12px
    font-weight: bold
    color: #959595


.btn-w
  overflow: hidden /* внутри лежат элементы со свойством float */

  &.__size-M
    padding: 25px 0



