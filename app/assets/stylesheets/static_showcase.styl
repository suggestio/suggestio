/* Showcase -- страница набора сайтов, использующих suggest.io */

.main-layout
    position: fixed
    background: url('/assets/images/bg.png')
    width: 100%
    top: 0px
    height: 50px
    z-index: 100000000

.common-info
    z-index: 1000
    position: fixed
    background: #f0f0f0 url('/st atic/images2/bg.png')
    width: 100%
    left: 0px
    bottom: 0px
    padding-left: 140px
    padding-bottom: 20px!important

.razduv-top,
.razduv-bottom
    opacity: 0
    z-index: 100000000
    position: fixed
    left: 0px
    top: 100px
    background: url('/assets/images/zatemnyalka.png') no-repeat left top
    width: 100%
    height: 40px

.razduv-bottom
    top: auto
    bottom: 40px
    background: url('/assets/images/razduv-bottom.png') repeat-x left top


.about-title
    width: 103px
    height: 23px
    margin-top: 60px
    background: url('/assets/images/sio-about-title.png') no-repeat left top


.showcase-layout
    width: 740px
    margin-left: 138px
    padding-top: 160px
    padding-bottom: 100px


.showcase-website,
.showcase-website_retina,
.more-websites
    display: block
    width: 180px
    height: 120px
    margin-right: 2px
    margin-bottom: 2px
    float: left

.showcase-website_retina
    background-size: 180px 120px


.more-websites
    background: url('/assets/images/sio-showcase-more.png')


.showcase-website .hover-plate,
.showcase-website_retina .hover-plate
    display: none
    width: 180px
    height: 120px
    background: rgba(0,0,0,0.5) url('/assets/images/sio-showcase-site-button.png') no-repeat center center

.showcase-website_retina .hover-plate
    background-image: url('/assets/images/sio-showcase-site-button-retina.png')
    background-size: 50px 50px


.showcase-website:hover .hover-plate,
.showcase-website_retina:hover .hover-plate
    display: block


@media only screen and (-Webkit-min-device-pixel-ratio: 1.5),
only screen and (-moz-min-device-pixel-ratio: 1.5),
only screen and (-o-min-device-pixel-ratio: 3/2),
only screen and (min-device-pixel-ratio: 1.5)
    .more-websites
        background: url('/assets/images/sio-showcase-more-retina.png')
        background-size: 180px 120px
    
