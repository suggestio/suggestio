/* Страница "о suggest.io", описывающая суть сервиса */
.sio-about-row
  h1
    text-align: left
    font-size: 50px
    font-family: "helios"
    color: #07a1ca
  p 
    text-align: left
    color: #959595
    
    a 
      color: #405c74
      text-decoration: underline
    a:hover
      text-decoration: none
      
.sio-about-live-search
  text-align: center
  padding-bottom: 40px
  
  img
    padding-top: 70px
  
  h1
    text-align: left
    font-size: 50px
    margin-top: -60px
    font-family: "helios"
  
  .rcc
    padding-top: 130px
    color: #cfcccc
    font-family: Arial
    font-size: 12px
    text-align: left
    padding-right: 50px

.sio-about-install
  background: #23313d
  text-align: center
  padding: 95px 0px
  
  .rcc
    padding-top: 77px

.sio-about-preferences
  background: #d1d7db
  text-align: center
  padding: 95px 0px
  
  h1
    color: #23313d
  
  .lcc
    padding-top: 76px
  .rcc
    text-align: left
    padding-top: 75px
    
    ul li span
      border-bottom: 1px #3a5469 dotted
      
    a 
      color: #3a5469

.sio-about-support
  padding: 95px 0px

.sio-share-row
  margin-bottom: 200px

.sio-share-row .ccc
  border-top: 1px #cbcbcb solid

@css{
  
  @media screen and (max-width: 768px){
    
    .sio-about-live-search .rcc
    {
      padding-top: 10px
    }
    
    .sio-about-install,
    .sio-about-preferences
    {
      padding: 20px 0px
    }
    .sio-about-install .rcc,
    .sio-about-preferences .lcc,
    .sio-about-preferences .rcc
    {
      text-align: left;
      padding-top: 20px
    }
    
  }
  
  @media screen and (max-width: 767px){
    
    .sio-about-row h1
    {
      font-size: 35px
    }
    
  }
}
