.sm-block-tpl12
  width: 140px
  border-top: 3px solid #38b84a
  border-bottom: 3px solid #38b84a

  .sale-mask
    width: 140px
    background: url('/assets/images/market/blocks/tpl2-mask.png') no-repeat 0 -3px
    background-size: 140px auto

  .color-bg
    background: #38b84a

  .icon
    padding: 30px 5px
    width: 130px
    height: 80px
    border-bottom: 1px dotted black
    background: url('/assets/images/market/blocks/tpl12-icon.png') no-repeat
    background-size: 130px auto
    background-position: 5px 5px
    color: white
    text-align: center
    font-family: 'pfdintextcomppro-medium-webfont'
    font-size: 80px
    line-height: 80px

    span
      font-size: 25px
      line-height: 25px

  .info
    padding: 5px
    text-align: center
    font-family: 'Arial'

    .title
      font-weight: bold
      font-size: 12px
      line-height: 12px

    .slogan
      color: #ce2222
      font-size: 12px
      line-height: 12px

.sm-block-tpl12.double-size
  width: 280px
  border-top: 6px solid #38b84a
  border-bottom: 6px solid #38b84a

  .sale-mask
    width: 280px
    background-size: 280px auto
    background-position: 0 -6px

  .icon
    padding: 60px 10px
    width: 260px
    height: 160px
    border-bottom: 2px dotted black
    background-size: 260px auto
    background-position: 10px 10px
    font-size: 160px
    line-height: 160px

    span
      font-size: 50px
      line-height: 55px

  .info
    padding: 10px

    .title
      font-size: 24px
      line-height: 24px

    .slogan
      font-size: 24px
      line-height: 24px


.sm-block-tpl12.height-300
  height: 294px

  .sale-mask
    height: 95px

  .color-bg
    height: 95px

.sm-block-tpl12.height-300.double-size
  height: 588px

  .sale-mask
    height:192px

  .color-bg
    height: 192px