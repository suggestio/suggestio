    .title
      color: white
      font-family: 'heliosthin'
      font-size: 20px
      line-height: 25px

    .descr
      display: inline-block
      padding: 5px
      background: url('/assets/images/market/blocks/tpl15-text-bg.png') repeat
      background-size: 1px 25px
      font-family: 'favoritlightcondcregular'
      font-size: 18px
      line-height: 18px

