.sm-block-tpl15
  width: 140px

  .svg-bottom,
  .svg-top
    width: 316px
    margin-left: -9px

  .svg-bottom
    position: relative
    z-index: 3

  .svg-top
    background: #b35151

  .bottom-bg
    top: auto
    bottom: 0
    width: 100%
    background: #b35151

  .logo
    width: 56px
    height: 56px
    left: 50%
    margin-left: -28px
    top: 10px
    z-index: 2

  .info
