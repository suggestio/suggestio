  width: 280px
  border: 10px solid #ffed00

  .bg
    width: 100%
    height: 100%

  .info
    width: 200px
    left: 70px
    top: auto
    bottom: 25px
    font-family: 'futurfutc-webfont'
    color: #ffed00

    .title
      font-size: 40px
      line-height: 40px

    .descr
