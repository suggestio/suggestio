.sm-block-tpl5
  width: 300px

  .bg
    z-index: 1
    width: 300px

  .mask
    width: 300px
    height: 300px
    z-index: 3


  .info
    position: absolute
    bottom: 0
    left: 10px
    z-index: 3
    color: black
    font-family: 'pfdintextcomppro-medium-webfont'

    .logo
      width: 56px

    .title
      font-size: 20px
      line-height: 20px

    .old-price
      font-size: 34px
      line-height: 34px
      text-decoration: line-through

    .price
      color: #bd2d4e
      font-size: 74px
      line-height: 84px

.sm-block-tpl5.double-size
  width: 600px

  .bg
    width: 600px

  .mask
    width: 600px
    height: 600px

  .info
    left: 20px

    .logo
      width: 112px

    .title
      font-size: 40px
      line-height: 40px

    .old-price
      font-size: 68px
      line-height: 68px

    .price
      font-size: 148px
      line-height: 168px


.sm-block-tpl5.height-300
  height: 300px

  .bg
    height: 100%

.sm-block-tpl5.height-300.double-size
  height: 600px


.sm-block-tpl5.height-460
  height: 460px

  .bg
    height: 100%

.sm-block-tpl5.height-460.double-size
  height: 920px
