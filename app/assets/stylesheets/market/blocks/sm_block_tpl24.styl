.sm-block-tpl24
  width: 140px

  .bg
    z-index: 1
    width: 140px

  .mask
    width: 140px
    height: 300px
    z-index: 3


  .info
    position: absolute
    bottom: 10px
    left: 10px
    z-index: 3
    color: black
    font-family: 'pfdintextcomppro-medium-webfont'

    .logo
      width: 56px

    .title
      font-size: 20px
      line-height: 20px
      margin-bottom: 15px

    .old-price
      font-size: 25px
      line-height: 25px
      text-decoration: line-through

    .price
      color: #bd2d4e
      font-size: 45px
      line-height: 45px

.sm-block-tpl24.double-size
  width: 280px

  .bg
    width: 280px

  .mask
    width: 280px
    height: 600px

  .info
    left: 20px
    bottom: 20px

    .logo
      width: 112px

    .title
      font-size: 40px
      line-height: 40px
      margin-bottom: 30px

    .old-price
      font-size: 50px
      line-height: 50px

    .price
      font-size: 90px
      line-height: 90px


.sm-block-tpl24.height-300
  height: 300px

  .bg
    height: 100%

.sm-block-tpl24.height-300.double-size
  height: 600px