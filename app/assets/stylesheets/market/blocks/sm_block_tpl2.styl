.sm-block-tpl2
  width: 300px

  .bg
    overflow: hidden
    height: 200px

  .sale-icon
    position: absolute
    right: 0
    top: 100px
    z-index: 3
    width: 104px
    height: 94px
    padding-top: 10px
    background: url('/assets/images/market/blocks/tpl7-icon.png') no-repeat
    background-size: 104px 104px
    font-family: 'pfdintextcomppro-medium-webfont'
    color: white
    font-size: 80px
    line-height: 80px
    text-align: center

    span
      font-size: 25px
      line-height: 25px

  .sale-mask-wrap
    background: white
    padding-bottom: 4px
    border-bottom: 1px dotted black

    .mask
      position: absolute
      top: 0
      left: 0
      width: 300px
      height: 200px

    img
      display: block
      width: 299px
      height: 200px

  .info
    overflow: hidden
    background: white
    text-align: center
    border-bottom: 5px solid black

    h5
      font-weight: normal

.sm-block-tpl2.double-size
  width: 600px

  .bg
    height: 400px

  .sale-icon
    top: 200px
    width: 208px
    height: 198px
    padding-top: 20px
    background-size: 208px 208px
    font-size: 160px
    line-height: 160px

    span
      font-size: 50px
      line-height: 50px

  .sale-mask-wrap
    padding-bottom: 8px
    border-bottom: 2px dotted black

    .mask
      width: 600px
      height: 400px

    img
      width: 599px
      height: 400px

  .info
    border-bottom: 10px solid black


.sm-block-tpl2.height-300
  height: 300px

  .info
    height: 90px

.sm-block-tpl2.height-300.double-size
  height: 600px

  .info
    height: 180px


.sm-block-tpl2.height-460
  height: 460px

  .info
    height: 250px

.sm-block-tpl2.height-460.double-size
  height: 920px

  .info
    height: 500px