.sm-block-tpl7
  font-family: 'PFDinTextCompPro-Medium'
  width: 300px
  border-top: 3px solid #38b84a
  border-bottom: 3px solid #38b84a

  .sale-mask
    width: 300px
    background: url('/assets/images/market/blocks/tpl2-mask.png') no-repeat 0 -3px
    background-size: 300px 195px

  .color-bg
    background: #38b84a

  .sale-icon
    position: absolute
    right: 0
    top: 100px
    z-index: 3
    width: 104px
    padding-top: 10px
    background: url('/assets/images/market/blocks/tpl7-icon.png') no-repeat
    background-size: 104px 104px
    color: white
    font-size: 80px
    line-height: 80px
    text-align: center

    span
      font-size: 25px
      line-height: 25px

  .info
    padding-top: 15px
    text-align: center

    .title
      font-size: 24px
      line-height: 24px

    .price
      font-size: 50px
      line-height: 50px
      color: #ce2222

.sm-block-tpl7.double-size
  width: 600px
  border-top: 6px solid #38b84a
  border-bottom: 6px solid #38b84a

  .sale-mask
    width: 600px
    background-size: 600px 390px
    background-position: 0 -6px

  .sale-icon
    top: 200px
    width: 208px
    padding-top: 20px
    background-size: 208px 208px
    font-size: 160px
    line-height: 160px

    span
      font-size: 50px
      line-height: 50px

  .info
    padding-top: 30px

    .title
      font-size: 48px
      line-height: 48px

    .price
      font-size: 100px
      line-height: 100px


.sm-block-tpl7.height-300
  height: 294px

  .sale-mask
    height: 188px

  .color-bg
    height: 191px

  .sale-icon
    height: 94px

.sm-block-tpl7.height-300.double-size
  height: 588px

  .sale-mask
    height:376px

  .color-bg
    height: 382px

  .sale-icon
    height: 188px