@import "reset"
@import "mixins"
@import "lk_new-design/buttons"

font-face( name )
  @font-face
    font-family: name
    src: url('/assets/fonts/market/' + name + '.eot')
    src: url('/assets/fonts/market/' + name + '.eot?#iefix') format('embedded-opentype'),
         url('/assets/fonts/market/' + name + '.woff') format('woff'),
         url('/assets/fonts/market/' + name + '.ttf') format('truetype')
    font-weight: normal
    font-style: normal

screen768 = 'screen and (max-width: 767px)'
screen1024 = 'screen and (max-width: 1024px)'
screenGorizontalIpad = 'screen and (max-width: 1024px) and (orientation : landscape)'
screenVerticallIpad = 'screen and (max-width: 1024px) and (orientation : portrait)'
screenIphone4 = 'screen and (max-width: 767px) and (device-aspect-ratio: 2/3)'
screenIphone5 = 'screen and (max-width: 767px) and (device-aspect-ratio: 40/71)'
screen1200 = 'screen and (max-width: 1200px)'
retina = "only screen and (-Webkit-min-device-pixel-ratio: 1.5), only screen and (-moz-min-device-pixel-ratio: 1.5), only screen and (-o-min-device-pixel-ratio: 3/2), only screen and (min-device-pixel-ratio: 1.5)"


font-face( 'opensans-light' )
font-face( 'opensans-bold' )
font-face( 'heliosthin' )

body
  min-width     1024px
  color         white
  font-family   'opensans-light'
  font-size     14px
  height        100% !important

  /* во всех кнопках uppercase */
  .btn
    text-transform  uppercase

.title
  font-family 'heliosthin'
  font-size    40px

.link
  color           #00b994
  text-decoration none
  cursor          pointer


/********************************************************************************************************************/
/* Header */
/********************************************************************************************************************/

.header
  position  fixed
  top       0
  left      0
  right     0
  z-index   1000

  min-width 1024px
  height    50px

  transition(all 0.4s linear 0s)

  &_cnt
    position  relative
    margin    0 auto
    max-width 1024px

  &_logo
    position    absolute
    top         25px
    left        0

  &_nav
    position  absolute
    left      110px
    top       30px

  &_phone
    position    absolute
    top         30px
    right       210px
    font-family 'opensans-bold'

  &_btn
    position  absolute
    top       20px
    right     0

    padding-bottom    6px
    padding-top       8px
    padding-left      15px
    padding-right     15px
    cursor  pointer

    background-color  rgba(255, 255, 255, 0.25)
    border            1px solid #f3f5f5
    color             #ffffff

    transition( all 0.2s linear 0s)
    border-radius(4px)

    &:hover
      background-color  rgba(255, 255, 255, 0.5)

.top-menu
  overflow hidden /* внутри элементы со свойством float */
  text-transform  uppercase

  &_i
    float       left
    display     inline-block
    padding     0 20px

    color           white
    font-size       13px
    font-weight     300
    text-align      center
    text-decoration none

    &:hover
      color #d5d5d5

  &_i.__js-act
    color #d5d5d5


/********************************************************************************************************************/
/* Секция Ваша реклама */
/********************************************************************************************************************/
.your-adv
  height            100%
  min-height        700px
  max-height        1081px /* высота изображения бэкграунда */
  text-align        center

  background-image      url('/assets/images/market/booklet/section-sio-market_bg.jpg')
  background-size       cover
  background-attachment fixed


  &_cnt
    margin      0 auto
    width       500px
    padding-top 200px

    font-family 'heliosthin'
    font-size   30px

  &_t
    margin-bottom 50px

  &_geo
    margin  60px auto 0
    display block
    width   25px
    height  25px

    background-image    url('data:image/svg+xml;base64,')
    background-repeat   no-repeat
    background-position center

  &_btns
    margin-top      75px

