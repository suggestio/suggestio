@import "reset"
@import "mixins"

title( v )
  letter-spacing v
  padding-left   v
  text-align     center

darkColor = black
lightColor = white
attentionColor = #ec1c23

screenIphoneVertical = 'screen and (max-width: 320px)'
screenGorizontalIpad = 'screen and (max-width: 1024px) and (orientation : landscape)'
screen1200 = 'screen and (max-width: 1200px)'

body
  font-family   'Open Sans'
  font-size     14px
  height        100% !important

/********************************************************************************************************************/
/* Common elements */
/********************************************************************************************************************/

.hidden
  display none

.ft-S
  font-size 12px

.ft-L
  font-size 18px

.color-dark
  color darkColor

.color-light
  color lightColor

  &.__strong
    color #a6a3a3

.color-attention
  color attentionColor

.link
  cursor          pointer
  text-decoration none

  &:hover
    text-decoration none

    .color-attention
      color lightColor

    .color-attention.__strong
      color #a6a3a3

    .color-light
      color attentionColor

    .color-light.__strong
      color attentionColor

    .color-light.__with-attention-bg
      color #a6a3a3

.def-transition
  transition(all 0.2s ease-in-out 0s)

.relative
  position relative

.abs
  position absolute

.ovh
  overflow hidden

.w
  display block

  &.__margin-L
    margin 20px 0

.bg-mask
  position  absolute
  top       0
  left      0
  z-index   100
  width     100%
  height    100%

  &.__dark
    background-color  #414141
    opacity           0.78

  &.__dark-strong
    background-color  #282828
    opacity           0.87

  &.__attention
    background-color  attentionColor
    opacity           0.68

.start-work-btn-w
  text-align center

.start-work-btn
  display     inline-block
  padding     10px 50px
  border      3px solid white
  font-size   12px
  border-radius(36px)

  &.__section-sio-market
    margin-top 50px

  &.__section-only-you
    margin-top  100px

  &.__attention
    border-color attentionColor

.section-cnt
  margin    0 auto
  max-width 870px

.title
  font-size       30px
  font-weight     800
  text-transform  uppercase

.phone-visible,
.ipad-visible
  display none

/********************************************************************************************************************/
/* Paralax styles */
/********************************************************************************************************************/
.paralax
  width                   100%
  margin                  auto
  position                relative

  background-attachment   fixed
  background-clip         border-box
  background-color        rgba(0, 0, 0, 0)
  background-origin       padding-box
  background-position     center top
  background-repeat       no-repeat

.bg-paralax
  background-attachment fixed
  background-size       cover
  background-clip       border-box
  background-repeat     repeat-y
  height                100%
  position              absolute
  width                 100%
  z-index               -1

/********************************************************************************************************************/
/* Header */
/********************************************************************************************************************/

.header
  position  fixed
  top       0
  left      0
  right     0
  z-index   1000
  height    50px
  transition(all 0.4s linear 0s)

  &.__js-dark
    background-color  rgba(175,175,173,0.9)
    border-bottom     1px solid #cdcdcd

    .top-menu_i
      color #878787

      &:hover
        color #d5d5d5

  &_cnt
    position  relative
    margin    0 auto
    max-width 1330px

  &_logo
    position    absolute
    top         10px
    left        10px

    font-size   18px

  &_nav
    position  absolute
    right     0
    top       15px

.top-menu
  overflow hidden /* внутри элементы со свойством float */

  &_i
    float       left
    display     inline-block
    width       120px
    text-align  center
    color       #7a857d

    &:hover
      color #d5d5d5

  &_i.__js-act
    color #d5d5d5


/********************************************************************************************************************/
/* Section SioMarket */
/********************************************************************************************************************/
.section-sio-market
  height            100%
  min-height        700px
  max-height        1081px /* высота изображения бэкграунда */
  background-image  url('/assets/images/market/booklet/section-sio-market_bg.jpg')

  &_cnt
    position    relative
    z-index     500
    padding-top 200px

  &_title
    font-size       28px
    title(40px)

  &_logo
    margin-top    50px
    margin-left   auto
    margin-right  auto
    display       block

  &_text
    padding-top 25px
    text-align  center
    color       #aeadad

  &_wifi
    color     #e3e3e3
    font-size 24px

  &_go-bottom-btn
    position    absolute
    left        50%
    bottom      10px
    z-index     10
    margin-left -13px

    display     block
    width       27px
    height      45px
    background  url('/assets/images/market/booklet/go-bottom-icon.png') no-repeat

/********************************************************************************************************************/
/* Section About */
/********************************************************************************************************************/
.section-about

  &_cnt
    padding-top 150px

  &_title
    color           #acaaaa
    font-size       36px
    title(40px)


  &_wifi-title
    text-align  center
    margin-top  80px
    font-size   20px
    color       #5e5e5e

  &_wifi-text
    text-align  center
    margin-top  15px
    font-size   12px
    color       #cac9c9

  &_icons-title
    text-align  center
    margin-top  50px
    font-size   20px
    color       #ec1c23

  &_offers
    overflow      hidden /* внутри элементы со свойством float */
    margin-top    45px
    margin-bottom 90px
    text-align    center

  &_bottom-title
    margin-top      200px
    margin-bottom   50px
    title(40px)


.section-about-offer
  width 33%
  float left

  &_icon
    margin      0 auto
    width       103px
    height      103px
    background  url('/assets/images/market/booklet/section-about_icons.png')

  &_icon.__icon-1
