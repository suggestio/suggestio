  &_text
    max-width   650px
    margin      70px auto 0
    font-size   12px
    color       #9b9b9b
    text-align  center

  &_place-icon
    margin-top    50px
    margin-bottom 100px
    margin-left   auto
    margin-right  auto

    width         33px
    height        52px
    background    url('/assets/images/market/booklet/place-icon.png') no-repeat

/********************************************************************************************************************/
/* Section Only you */
/********************************************************************************************************************/
.section-only-you

  &_cnt
    margin          0 auto
    max-width       1090px
    padding-top     75px
    padding-bottom  135px

  &_text
    margin-top    70px
    margin-bottom 50px
    color         #9b9b9b
    font-size     12px
    text-align    center

  &_title-w
    display       inline-block
    margin-bottom 50px

  &_title
    title(50px)

  &_title-border
    height              20px
    margin              0 108px
    background-image    url('/assets/images/market/booklet/section-only-you_border.png')
    background-repeat   repeat-x
    background-position center bottom

.only-you-block
  float left
  width 50%

  &_icon
    margin            0 auto
    width             100px
    height            100px
    background-image  url('/assets/images/market/booklet/section-only-you_icons.png')
    background-repeat no-repeat

  &_icon.__block-1
    background-position 0 0

  &_icon.__block-2
    background-position 0 -133px

  &_icon.__block-3
    background-position 0 -283px

  &_icon.__block-4
