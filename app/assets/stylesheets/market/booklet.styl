    border          3px solid lightColor
    title(40px)

  &_plus
    color       lightColor
    font-size   30px
    margin-top  70px
    text-align  center

  &_btn
    margin-top 50px

  &_block
    max-width     450px
    margin-left   auto
    margin-right  auto
    margin-top    70px
    color         #e7e7e7
    text-align    center
    font-size     12px

/********************************************************************************************************************/
/* Section Equipment */
/********************************************************************************************************************/
.section-equipment

  &_btn-w
    padding-top     40px
    padding-bottom  20px

  &_btn
    display     block
    width       74px
    height      74px
    margin      0 auto
    cursor      pointer
    background  url('/assets/images/market/booklet/section-equipment_btn.png') no-repeat

  &_slide
    overflow    hidden
    position    relative

  &_cnt-w
    margin-top        18px
    background-color  #eeecec

