    padding 0 10px

/********************************************************************************************************************/
/* Section You wil notice */
/********************************************************************************************************************/
.section-you-notice
  height              400px

  &_bg-paralax
    background-image    url('/assets/images/market/booklet/section-2-4_bg.jpg')
    background-position center -270px

  &_cnt
    position    relative
    padding-top 85px

  &_icon
    float       left
    width       50%
