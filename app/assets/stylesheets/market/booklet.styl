/* Section Advantages */
/********************************************************************************************************************/
.section-advantages

  &_bg-paralax
    background-image    url('/assets/images/market/booklet/section-advantages_bg.jpg')

  &_cnt
    position        relative
    padding-top     150px
    padding-bottom  100px
    text-align      center

  &_title
    display         inline-block
    padding-top     5px
    padding-bottom  5px
