  &_icon.__icon-2
    background-position 0 -306px

  &_icon.__icon-3
    background-position 0 0

  &_text
    margin-top  15px
    padding     0 10px
    color       #cac9c9
    text-align  center
    font-size   12px

/********************************************************************************************************************/
/* Section Start */
/********************************************************************************************************************/
.section-start
