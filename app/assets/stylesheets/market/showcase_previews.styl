.ad-preview,
.preview
  .poster-photo
    position: absolute!important
    left: 50%
    top: 50%

.ad-preview
  position: relative

.preview-small

  .offer-header
    height: 18px
    img
      height: 10px
      margin: 5px auto 0 auto!important

  .sm-button
    border-width: 3px
    font-size: 5px

  .offer-details
    background: rgba(0,0,0,0.1)
    width: 100%
    height: 100%

    .od-inner
      padding: 30px 5px

    .old-price
      font-size: 12px
    .new-price
      font-size: 18px

    .offer-location
      font-size: 12px
    .sm-button
      width: 150px
      position: absolute
      left: 50%
      margin-left: -85px
      bottom: 5px
      font-size: 5px

  /* Текстовой шаблон */
  .od-text
    width: 60%
    font-size: 8px
    line0height: 10px

