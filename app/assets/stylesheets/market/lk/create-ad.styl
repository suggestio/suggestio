          .item.mask-5
            background-position: -270px -280px
          .item.mask-6
            background-position: -345px -280px
        .gray
          font-size: 12px
          font-family: 'Arial'
          color: #959595
        .old-price
          display: none
        .submit-wrap
          text-align: center
          .green-but-small
            display: inline-block
            margin-right: 30px
          .red-but-small
            display: inline-block
