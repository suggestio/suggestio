          background: #efefef
          border-bottom: 1px solid #9a9b9b
          border-radius(10px 10px 0 0)
          overflow: hidden
          padding: 10px
          .close
            float: right
            width: 17px
            height: 17px
            text-decoration: none
            background: url('/assets/images/market/lk/close-icon.png') no-repeat
            background-position: 0 -67px
          .close:hover
            background-position: 0 0
          .close:active
            background-position: 0 1px
        .content
          padding: 25px
          .title
            padding-bottom: 25px
            color: #676666
            font-size: 30px
            font-family: 'ParagNorCIta'
            text-align: center
          .ad-preview
            width: 140px
            height: 180px
            background: gray
            margin: 0 auto
          .controls
            text-align: center
