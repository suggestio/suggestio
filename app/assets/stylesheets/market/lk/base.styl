/********************************************************************************************************************/
/* Header */
/********************************************************************************************************************/
.header
  position: relative
  margin-bottom: -60px /* равно высоте header'a */
  min-width: 1000px

  background: #23313d

  &.__responsive
    min-width: 320px

.header_cnt
  height: 60px
  width: 1000px
  margin: 0 auto

  &.__responsive
    width: auto
    max-width: 1000px

.siom-logo-def
  float: left

  margin-top: 5px
  display: block

  text-decoration: none

/********************************************************************************************************************/
/* Body */
/********************************************************************************************************************/

.body
  min-width: 1000px
  min-height: 100%
  background: #e1e1e1

  &.__responsive
    min-width: 320px

.body_cnt
  max-width: 878px
  margin: 0 auto
  padding-bottom: 60px /* равно высоте footer'a */
  padding-top: 130px /* равно высоте header'a + title'a + 10px */

  &.__responsive
    padding-left: 10px
    padding-right: 10px

  &.__top-S
    padding-top: 80px

.page-title
  min-height: 60px
  padding-top: 60px
  margin-bottom: -120px
  background: #efefef
  border-bottom: 1px solid #9a9b9b

.page-title_cnt
  position: relative

  max-width: 1000px
  margin: 0 auto
  padding-top: 15px

  font-size: 30px
  color: #676666
  font-family: 'PFDinTextCompPro-Medium'


/********************************************************************************************************************/
/* Footer */
/********************************************************************************************************************/

.footer
  position: relative
  margin-top: -60px
  min-width: 1000px
  height: 60px
  background: #23313d

  &.__responsive
    min-width: 320px

.footer_cnt
  margin: 0 auto
  width: 1000px
  padding-top: 25px

  &.__responsive
    width: auto !important
    max-width: 1000px

.copyright-block
  padding-right: 5px
  padding-left: 62px
  color: #a8c3cb
  font-size: 12px
  font-family: 'Arial'

.copyright-link
  color: #a8c3cb
  text-decoration: none

  &:hover
    text-decoration: underline

/********************************************************************************************************************/
/* Всплывающие полосы в шапке */
/********************************************************************************************************************/
.status-bar
  position: absolute
  z-index: 3
  opacity: 0.8
  top: 60px
  left: 0

  width: 100%

  color: white
  font-family: 'PT Sans Narrow', 'sans-serif'
  text-align: center

  &.__bad
    background: #e23131

  &.__good
    background: #48ab38

  &_cnt
    margin: 18px  /* Используется дополнительный контейнер, для корректного отображения эффектов SlideDown&SlideUp */