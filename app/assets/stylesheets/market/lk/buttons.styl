/********************************************************************************************************************/
/* SioMarket default action button */
/********************************************************************************************************************/

siomAcBtnHoverGradient(innerColor, defColor)
  background: #feffff
  background: -moz-radial-gradient(center, ellipse cover,  #feffff 0%, innerColor 0%, defColor 100%)
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#feffff), color-stop(0%,innerColor), color-stop(100%,defColor))
  background: -webkit-radial-gradient(center, ellipse cover,  #feffff 0%,innerColor 0%,defColor 100%)
  background: -o-radial-gradient(center, ellipse cover,  #feffff 0%,innerColor 0%,defColor 100%)
  background: -ms-radial-gradient(center, ellipse cover,  #feffff 0%,innerColor 0%,defColor 100%)
  background: radial-gradient(ellipse at center,  #feffff 0%,innerColor 0%,defColor 100%)

siomAcBtnColor1 = #48ab38 /* зелёный */
siomAcBtnColor2 = #4f88a9 /* синий */
siomAcBtnColor3 = #9a9d9e /* серый */
siomAcBtnColor4 = #e24a4a /* красный */
siomAcBtnColor5 = #b6c2c5 /* серо-синий */

.siom-ac-btn
  display: inline-block
  border: none
  cursor: pointer
  text-decoration: none
  text-align: center
  text-shadow(1px 1px 1px #363636)

  &.__list
    margin-right: 25px

  &.__list-vertical
    margin: 5px 0

  &.__color-1
    color: white
    background: siomAcBtnColor1

    &:hover
      siomAcBtnHoverGradient(#67CE52, siomAcBtnColor1)

    &:active
      background: siomAcBtnColor1
      box-shadow(0 0 30px 0 #2e7921 inset)
      color: #a4c59e

  &.__color-2
    color: white
    background: siomAcBtnColor2

    &:hover
      siomAcBtnHoverGradient(#62AAD1, siomAcBtnColor2)

    &:active
      background: siomAcBtnColor2
      box-shadow(0 0 30px 0 #30607c inset)
      color: #a9beca

  &.__color-3
    color: white
    background: siomAcBtnColor3

    &:hover
      siomAcBtnHoverGradient(#A9ACAD, siomAcBtnColor3)

    &:active
      background: siomAcBtnColor3
      box-shadow(0 0 30px 0 #76797a inset)
      color: #d2d1d1

  &.__color-4
    color: white
    background: siomAcBtnColor4

    &:hover
      siomAcBtnHoverGradient(#FC5353, siomAcBtnColor4)

    &:active
      background: siomAcBtnColor4
      box-shadow(0 0 30px 0 #b43232 inset)
      color: #ffa1a1

  &.__color-5
    color: white
    background: siomAcBtnColor5

    &:hover
      siomAcBtnHoverGradient(#C9D5D8, siomAcBtnColor5)

    &:active
      background: siomAcBtnColor5
      box-shadow(0 0 30px 0 #9EA9AA inset)
      color: #d2d1d1

  &.__size-S
    padding: 5px 25px

    &:active
      padding: 6px 25px 4px

  &.__size-M
    padding: 10px 25px

    &:active
      padding: 11px 25px 9px

  &.__size-XL
    display: block
    padding: 10px 0

    &:active
      padding: 11px 0 9px

  &.__ft-M
    font-family: 'Arial'
    ft(14px)

  &.__ft-XM
    font-family: 'heliosthin'
    ft(16px)

  &.__ft-L
    font-family: 'heliosthin'
    ft(20px)

  &.__ft-XL
    font-family: 'PT_Sans-Narrow'
    ft(24px)

  &.__billing
    float: right
    margin-right: 12px
    margin-top: 10px
    text-shadow(none)

  &_ft-S
    font-family: 'Arial'
    font-size: 12px

