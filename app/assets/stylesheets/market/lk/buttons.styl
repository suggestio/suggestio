    ft(30px)
    text-shadow( 1px 1px 1px #fff )

    &:active
      padding-top: 13px /* особенности шрифта */
      padding-bottom: 7px /* особенности шрифта */

  &.__color-1
    border: 1px solid siomLinkBtnColor1
    color: siomLinkBtnColor1

    &:hover
      color: #4c4c4c
      border-color: #4c4c4c

    &:active
      background: #b6c2c5

  &.__color-2
    border: 1px solid siomLinkBtnColor2
    color: siomLinkBtnColor2

    &:hover
      color: #4c4c4c
      border-color: #4c4c4c

    &:active
      background: #b6c2c5

  &.__color-3
    border: 1px solid siomLinkBtnColor3
    color: siomLinkBtnColor3

    &:hover
      border: 1px solid siomLinkBtnColor3
      background: siomLinkBtnColor3
      color: white

    &:active
      background: siomLinkBtnColor3
      border: 1px solid #2f5d79
      box-shadow(0 0 30px 0 #2f5d79 inset)
      color: #98b2c1

  &.__color-4
    border: 1px solid siomLinkBtnColor4
    color: siomLinkBtnColor4

    &:hover
      border: 1px solid siomLinkBtnColor4
      background: siomLinkBtnColor4
      color: white

    &:active
      background: siomLinkBtnColor4
      border: 1px solid #2c751f
      box-shadow(0 0 30px 0 #2c751f inset)
      color: #92bb8b

  &.__color-5
    box-shadow(0 1px 0 0 white inset)
    border: 1px solid siomLinkBtnColor5
    color: #676666
    font-family: 'PFDinTextCompPro-Medium'
    text-shadow(1px 1px 1px #F8F8F8)

    &:hover
      border-color: #4f88a9
      color: #4f88a9

    &:active
      box-shadow(none)
      border-color: #9a9b9b
      background: #cbcbcb
      color: #676666

  &.__radial
    border-radius(50%)

  &.__list-element
    margin: 0 15px

