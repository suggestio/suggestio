.lk
  .body-wrap
    .body
      .shop-info
        .name-wrap
          overflow: hidden
          padding: 15px 0
          .name
            padding-right: 20px
            font-size: 24px
            font-family: 'PT Sans Narrow','sans-serif'
          .edit
            font-size: 10px
            color: #959595
            font-family: 'Arial'
            text-decoration: none
            background: url('/assets/images/market/lk/edit-but.png') no-repeat
            background-position: 0 -64px
            padding-left: 15px
            padding-top: 5px
          .edit:hover
            background-position: 0 0
            color:#5088aa
        .block
          overflow: hidden
          margin: 15px 0
          .left
            float: left
            width: 148px
            padding-right: 22px
            border-right: 1px solid #cbcbcb
            .big-triger-wrap
              .title
                font-size: 12px
                color: #959595
                font-family: 'Arial'
                padding-bottom: 15px
              .big-triger
                text-align: center
                width: 148px
                height: 47px
                padding-top: 20px
                background: url('/assets/images/market/lk/big-triger-bg.png') no-repeat
                span
                  font-family: 'Arial'
                  font-size: 10px
                span:hover
                  cursor: pointer
                  color: #5088aa
                .disable-but
                  color: #cbcbcb
                .triger
                  position: relative
                  display: inline-block
                  width: 44px
                  height: 6px
                  background: url('/assets/images/market/lk/triger-bg.png') no-repeat center center
                  .circle
                    transition( -webkit-transform linear 0.1s )
                    transition( transform linear 0.1s )
                    position: absolute
                    width: 20px
                    height: 18px
                    top: -6px
                    transform( translate3d(-3px, 0, 0))
                    background: url('/assets/images/market/lk/circle.png') no-repeat
                    background-position: 0 -68px
                  .circle:hover
                    cursor: pointer
                    background-position: 0 0
              .big-triger.enabled
                .circle
                  transform( translate3d(27px, 0, 0))
            .shop-floor
              color: #676666
              font-size: 14px
              font-family: 'Arial'
              font-weight: bold
              text-align: right
          .right
            padding-left: 20px
            border-left: 1px solid #f0f0f0
            vertical-align: top
            .shop-descr
              color: #676666
              font-size: 14px
              font-family: 'Arial'
            .shop-section
              .name
                color: #959595
                font-size: 12px
                font-family: 'Arial'
              .value
                padding-left: 15px
                color: #676666
                font-size: 14px
                font-family: 'Arial'
                font-weight: bold
