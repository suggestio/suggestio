  transform: v

@css {
  @import url(http://fonts.googleapis.com/css?family=PT+Sans+Narrow:700,400&subset=cyrillic-ext,latin-ext);

}

@font-face
    font-family: 'ParagNorCIta'
    src: url('/assets/fonts/market/DINCondensedC/PFDinTextCompPro-Medium.eot')
    src: url('/assets/fonts/market/DINCondensedC/PFDinTextCompPro-Medium.eot?#iefix') format('embedded-opentype'),
         url('/assets/fonts/market/DINCondensedC/PFDinTextCompPro-Medium.woff') format('woff'),
         url('/assets/fonts/market/DINCondensedC/PFDinTextCompPro-Medium.ttf') format('truetype'),
         url('/assets/fonts/market/DINCondensedC/PFDinTextCompPro-Medium.svg#pf_din_text_comp_promedium') format('svg')
    font-weight: normal
    font-style: normal

.lk
  .ovh
    overflow: hidden

  .border-line
    overflow: hidden
    width: 100%
    border-top: 1px solid #cbcbcb
    border-bottom: 1px solid #f0f0f0

  .input-wrap
    margin-top: 10px
    margin-bottom: 10px
    .left
      vertical-align: middle
      width: 120px
      label
        padding-right: 30px
        float: left
        font-size: 12px
        color: #959595
        font-family: 'Arial'
  .input-wrap.textarea
    .left
      vertical-align: top
      padding-top: 18px
  .input-wrap.big
    width: 100%
  .input-wrap.small
    width: 260px
    float: left
    margin-right: 60px
  .input
    background: none repeat scroll 0 0 #FFFFFF
    border: 1px solid #B4B3B3
    padding: 1px
    .input-shadow
      border-left: 1px solid #FBFBFB
      border-right: 1px solid #FBFBFB
      border-top: 1px solid #D2D3D3
      border-radius(4px)
      input
        outline: 0
        padding: 0 10px
        width: 100%
        height: 35px
        font-size: 16px
        color: #959595
        font-family: 'Arial'
      textarea
        width: 100%
        height: 170px
        padding: 10px
        resize: none
        font-size: 16px
        color: #959595
        font-family: 'Arial'
  .focus
    .input
      border: 1px solid #07a1ca !important
      .input-shadow
        input
          color: #07a1ca
        textarea
          color: #07a1ca
  .input.error
    border: 1px solid #e23131

  .green-but-small
    outline: 0
    display: block
    float: right
    width: 100px
    height: 40px
    color: white
    cursor: pointer
    font-size: 14px
    font-family: 'Arial'
    background: url('/assets/images/market/lk/green-but.small.png') no-repeat
    background-position: 0 -180px
  .green-but-small:hover
    background-position: 0 -90px
  .green-but-small:active
    color: #dcea8
    background-position: 0 0

  .blue-but-small
    outline: 0
    display: block
    float: right
    width: 122px
    height: 40px
    color: white
    cursor: pointer
    font-size: 14px
    font-family: 'Arial'
    background: url('/assets/images/market/lk/blue-but.small.png') no-repeat
    background-position: 0 -180px
  .blue-but-small:hover
    background-position: 0 -90px
  .blue-but-small:active
    color: #a8bdc9
    background-position: 0 0

  .select-file-wrap
    width: 300px
    overflow: hidden
    .preview
      float: left
      border: 1px solid #b2b2b2
    .select-file
      position: relative
      float: left
      width: 188px
      height: 27px
      margin-left: 20px
      overflow: hidden
      input
        outline: 0
        position: absolute
        z-index: 2
        cursor: pointer
        top: 0
        left: 0
        display: block
        opacity: 0
        width: 188px
        height: 27px
      .bg
        padding-top: 6px
        position: absolute
        top: 0
        left: 0
        width: 188px
        height: 27px
        background: url('/assets/images/market/lk/gray-but.png') no-repeat
        background-position: 0 -154px
        font-size: 12px
        font-family: 'Arial'
        color: #959595
        text-align: center
    .select-file:hover
      .bg
        background-position: 0 -77px
    .select-file:active
       .bg
        background-position: 0 0
    .descr
      padding-top: 5px
      width: 200px
      float: left
      font-size: 12px
      font-family: 'Arial'
      color: #b4b4b4
      margin-left: 20px

  .body-wrap
    .title-wrap
      .center
        .title-inner
          font-size: 30px
          color: #676666
          font-family: 'PT Sans Narrow', 'sans-serif'
          padding-left: 50px
        .back-but
          display: block
          margin-right: 15px
          width: 35px
          height: 35px
          float: left
          text-decoration: none
          background: url('/assets/images/market/lk/back-but.png') no-repeat
          background-position: 0 -85px
        .back-but:hover
          background-position: 0 0


