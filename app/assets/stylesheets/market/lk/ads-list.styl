.lk
  .ads-list
    overflow: hidden
    .title
      display: block
      padding: 20px 0
      font-size: 14px
      font-family: 'Arial'
      font-weight: bold
      color: #676666
    .add
      display: block
      float: left
      margin-right: 30px
      width: 270px
      height: 350px
      text-decoration: none
      background: url('/assets/images/market/lk/new-ad.png') no-repeat
    .add:hover
      background: url('/assets/images/market/lk/new-ad.hover.png') no-repeat
    .item
      float: left
      overflow: hidden
      .preview
        width: 268px
        height: 348px
        margin-right: 30px
        border: 1px solid #676666
      .controls
        text-align: center
        label
          color: #959595
          font-size: 12px
          font-family: 'Arial'
          padding-top: 10px
          input
            margin-right: 10px
        label.inactive
          text-decoration: line-through
