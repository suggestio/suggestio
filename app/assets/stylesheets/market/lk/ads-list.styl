.lk
  .ads-list
    overflow: hidden
    .title
      display: block
      padding: 20px 0
      font-size: 14px
      font-family: 'Arial'
      font-weight: bold
      color: #676666
    .add
      display: block
      float: left
      margin-right: 30px
      margin-bottom: 30px
      width: 270px
      height: 350px
      text-decoration: none
      background: url('/assets/images/market/lk/new-ad.png') no-repeat
      background-position: 0 -400px
    .add:hover
      background-position: 0 0

    .item
      position: relative
      float: left
      overflow: hidden
      width: 270px
      margin-bottom: 30px
      .preview
        position: relative!important
        width: 268px
        height: 348px
        margin-right: 30px
        .hover
          display: none
      .controls
        padding-left: 30px
        label
          display: block
          color: #959595
          font-size: 12px
          font-family: 'Arial'
          padding-top: 10px
          input
            margin-right: 10px
        label.inactive
          text-decoration: line-through
    .item
      .preview:hover
        .hover
          display: block
          position: absolute
          width: 268px
          height: 348px
          top: 0
          left: 0
          z-index: 10005!important
          text-decoration: none
          background: url('/assets/images/market/lk/edit-ad.png') no-repeat black
          background-position: 5px 5px
          opacity: 0.5

    .item.disabled
      .disabled-ad
        display: block
        position: absolute
        top: 0
        left: 0
        background: black
        width: 268px
        height: 348px
        z-index: 10000
        opacity: 0.5

  .sm-offer
    overflow: hidden

.ads-list
  .sm-shops-offers-link
    display: none!important