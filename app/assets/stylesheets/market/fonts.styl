xfontface( name )
  @font-face
    font-family: name
    src: url('/vassets/fonts/market/' + name + '.eot')
    src: url('/vassets/fonts/market/' + name + '.eot?#iefix') format('embedded-opentype'),
         url('/vassets/fonts/market/' + name + '.woff') format('woff'),
         url('/vassets/fonts/market/' + name + '.ttf') format('truetype')
    font-weight: normal
    font-style: normal

xfontface( 'rex_bold-webfont' )


xfontface2( name )
  @font-face
    font-family: name
    src: url('/vassets/fonts/' + name + '/' + name + '.eot')
    src: url('/vassets/fonts/' + name + '/' + name + '.eot?#iefix') format('embedded-opentype'),
         url('/vassets/fonts/' + name + '/' + name + '.woff2') format('woff2'),
         url('/vassets/fonts/' + name + '/' + name + '.woff') format('woff'),
         url('/vassets/fonts/' + name + '/' + name + '.ttf') format('truetype')
    font-weight: normal
    font-style: normal

