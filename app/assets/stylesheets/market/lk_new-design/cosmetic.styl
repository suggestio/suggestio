@import "mixins"

/********************************************************************************************************************/
/* Иконки, значки, украшательства */
/********************************************************************************************************************/
.required-icon
  color red

/********************************************************************************************************************/
/* Страница с информацией об узле */
/********************************************************************************************************************/
.profile

  &_change-shop-btn
    position  absolute
    top       0
    right     0

  &_logo-bar
    float       left
    width       140px
    min-height  140px

  &_logo-w
    width     140px
    height    140px

  &_logo-img
    display     block
    max-width   140px
    max-height  140px

  &_info-bar
    overflow      hidden
    padding-left  25px

/********************************************************************************************************************/
/* Страница со всеми рекламными карточками узла */
/********************************************************************************************************************/
.add-adv-btn
  display         block
  width           140px
  height          140px
  line-height     120px

  color           #a1a1a1
  text-align      center
  text-decoration none

  vertical-align  middle
  cursor          pointer
  border          2px dashed
  transition(0.2s all ease-in-out 0s)

  &:hover
    color #00b994