lightGray = #7f7f7f
darkGray  = #464646

pink1 = #feeaea
pink2 = #ffd7d7
red   = #f44040
green = #00b994


.white
  color white

.black
  color black

.light-gray
  color lightGray

.dark-gray
  color darkGray

.link
  color           #00b994
  text-decoration none
  border-bottom   1px solid rgba(0, 185, 148, 0.3)
  transition(all 0.2s ease-in-out 0s)

  &:hover
    color: #007b56
    border-color: #c6c6c6

.dark-link
  text-decoration none

  &:hover
    color white

.delimiter
  clear             both
  height            1px
  background-color  #636363

  &.__light
    background-color #d7d7d7

