@import "mixins"

/********************************************************************************************************************/
/* Иконки, значки, украшательства */
/********************************************************************************************************************/
.required-icon
  color red

/********************************************************************************************************************/
/* Страница с информацией об узле */
/********************************************************************************************************************/
.profile

  &_change-shop-btn
    position  absolute
    top       0
    right     0

  &_logo-bar
    float       left
    width       140px
    min-height  140px

  &_info-bar
    overflow      hidden
    padding-left  25px

  &_photo-lst
    margin-top  10px
    overflow    hidden
    height      200px
    border-radius(4px)
    webkitContainerBorderRadiusFix()

  &_photo-i
    display     block
    width       100%
    max-height  200px


/********************************************************************************************************************/
/* Страница со всеми рекламными карточками узла */
/********************************************************************************************************************/
.add-adv-btn
  display         block
  width           150px
  height          150px
  line-height     150px
  box-sizing      border-box

  color           #a1a1a1
  text-align      center
  text-decoration none

  cursor          pointer
  border          2px dashed
  transition(0.2s all ease-in-out 0s)

  &:hover
    color             white
    background-color  #00b994

  span
    display         inline-block
    padding-top     50px
    vertical-align  middle
    font-size       14px
    line-height     16px

.adv-lst
  margin    15px 0
  overflow  hidden

  &_delimiter
    clear        both
    padding-top  20px

.adv-item
  float       left
  position    relative
  margin-left 63px
  width       150px

  .sm-block
    position  relative
    margin    0 auto

  &.__first-in-line
    margin-left 0

  &_preview
    position      relative
    overflow      hidden
    height        150px
    margin-bottom 5px

  &_preview-container
    width 300px
    transform( scale3d(0.5,0.5,0.5) )
    transform-origin( 0 0 0 )

  &_preview-border
    position  absolute
    bottom    0
    left      0
    z-index   50

    width     100%
    height    15px

    background-image  url('data:image/png;base64,')
    background-repeat repeat-x
    background-size   auto 100%

  &_edit-btn
    position          absolute
    left              0
    top               0
    z-index           40
    opacity           0

    display           inline-block
    line-height       150px
    width             100%
    background-color  rgba(0,0,0,0.8)

    color             white
    text-align        center
    text-decoration   none

    &:hover
      opacity 1

    span
      vertical-align  middle
      display         inline-block
      width           60px
      height          60px

      background-color  #f44040
      border-radius(50%)

  &_status
    position          absolute
    left              0
    top               0
    z-index           40

    display           block
    width             150px
    height            150px

    color             white
    text-align        center
    text-decoration   none
    cursor            pointer

    span
      display         inline-block
      padding-top     50px
      vertical-align  middle
      font-size       14px
      line-height     16px

  &_status.__request
    background-color  rgba(76,136,169,0.81)

  &_status.__ok
    background-color  rgba(26,188,138,0.81)

/********************************************************************************************************************/
/* Страница биллинга */
/********************************************************************************************************************/
.billing

  &_money-info
    margin-bottom 40px
    text-align    center

  &_all-money
    float       left
    padding-top 5px
    min-width   150px
    border-top  5px solid #d7d7d7
    text-align  left

  &_money-value
    font-size   24px
    text-align  right

  &_available-money
    display     inline-block
    padding-top 5px
    min-width   150px
    border-top  5px solid green
    text-align  left

  &_locked-money
    float       right
    padding-top 5px
    min-width   150px
    border-top  5px solid red
    text-align  left

.tariff
  overflow      hidden
  margin-top    15px
  margin-bottom 35px

  &_illustration-w
    float         left
    padding-left  20px
    padding-right 50px

  &_illustration
    width             85px
    height            161px
    background-image  url('/assets/images/market/new-design/tariff-illustration_retina.png')
    background-repeat no-repeat
    background-size   100% auto

  &_info
    width 100%

    .td
      padding 10px

  &_info-title
    color       lightGray
    font-size   11px
    text-align  center

  &_info-value
    color             darkGray
    font-size         14px
    text-align        center
    background-color  #fad3d3

  &_pink
    background-color  #f7e3e3

  &_red
    background-color  #fad3d3

  &_green
    background-color  #00b994

  &_photo-lst
    overflow            hidden
    width               100%
    max-height          250px

  &_photo-i
    display     block
    width       100%
    max-height  250px

.transactions-history

  &_contract
    display       inline-block
    overflow      hidden
    max-width     200px
    text-overflow ellipsis

  &_descr
    overflow  hidden
    max-width 200px

/********************************************************************************************************************/
/* Превью рекламной карточки в попапе */
/********************************************************************************************************************/
.adv-preview

  &_status
    margin          10px 0
    padding-left    50px
    padding-top     10px
    padding-bottom  10px
    border-bottom 1px solid #c2c2c2
    font-size 14px
