/* Страница с информацией об узле */
/********************************************************************************************************************/
.profile

  &_change-shop-btn
    position  absolute
    top       0
    right     0

  &_logo-bar
    float       left
    width       140px
    min-height  140px

  &_info-bar
    overflow      hidden
    padding-left  25px

  &_prop
    margin  15px 0

  &_prop-name
    width         125px
    padding-right 25px
    font-size     11px
    color         lightGray

  &_prop-value
    font-size 13px
    color     darkGray