/********************************************************************************************************************/
/* Основная сетка проекта */
/********************************************************************************************************************/

projectMinWidth = 1100px
headerHeight    = 60
rightMenuWidth  = 210
leftMenuWidth  = 60

.lk
  font-family 'opensans-light'
  font-size   13px
  min-width   projectMinWidth

.page
  position          relative
  min-height        100%
  min-width         projectMinWidth
  background-color  #efefef

  &_cnt
    position  relative
    margin    0 auto
    width     790px

  &_title
    color     #464646
    font-size 18px

.header
  position          relative
  z-index           100
  height            (headerHeight)px
  margin-bottom     -(headerHeight)
  background-color  #303030

  &_logo-link
    position    absolute
    top         0
    left        0

    display     inline-block
    line-height (headerHeight)px
    width       (leftMenuWidth)px
    text-align  center

  &_logo-image
    display         inline-block
    vertical-align  middle

  &_logo-text
    position  absolute
    top       18px
    left      360px

  &_billing
    position  absolute
    top       20px
    right     360px

  &_billing-t
    padding-right 30px

  &_logout
    position      absolute
    top           20px
    right         0

    overflow      hidden
    padding       0 10px
    width         190px
    text-overflow ellipsis

.left-bar
  position          absolute
  top               0
  bottom            0
  left              0

  width             (leftMenuWidth)px
  background-color  #464646

  &_menu
    padding-top (headerHeight)px

  &_menu-i
    display       block
    height        60px
    color         #818284

    &:hover
      cursor            pointer
      color             white
      border-left       5px solid #f44040
      background-color  #58585a

  &_menu-i.__act
    color             white
    border-left       5px solid #f44040
    background-color  #58585a

.right-bar
  position          absolute
  top               0
  bottom            0
  right             0

  width             (rightMenuWidth)px
  background-color  #3e3e3e

  &_menu
    padding-top (headerHeight)px

  &_menu-i
    display     block
    height      60px
    color       #a5a5a5
    text-align  center

    &:hover
      cursor            pointer
      color             white
      background-color  #58585a

  &_menu-i.__act
    color             white
    background-color  #58585a

.viewport
  padding-top   (headerHeight + 40)px
  padding-left  (leftMenuWidth + 20)px
  padding-right (rightMenuWidth + 20)px