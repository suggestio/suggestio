.lk
  min-width 1366px

.page
  position          relative
  min-height        100%
  min-width         1366px
  background-color  #efefef

.header
  position          relative
  z-index           100
  height            60px
  margin-bottom     -60px
  background-color  #303030

  &_logo-link
    position    absolute
    top         0
    left        0
    display     inline-block
    line-height 60px
    width       60px
    text-align  center

  &_logo-image
    display         inline-block
    vertical-align  middle

  &_logo-text
    position  absolute
    top       18px
    left      360px

  &_billing
    position  absolute
    top       20px
    right     360px

  &_billing-t
    padding-right 30px

  &_logout
    position      absolute
    top           20px
    right         0

    overflow      hidden
    padding       0 10px
    width         190px
    text-overflow ellipsis

.left-menu
  position          absolute
  top               0
  bottom            0
  left              0
  width             60px
  background-color  #303030

.right-menu
  position          absolute
  top               0
  bottom            0
  right             0
  width             210px
  background-color  #303030