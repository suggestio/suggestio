@import "mixins"

/********************************************************************************************************************/
/* Fonts */
/********************************************************************************************************************/

.ft-XS
  font-size 11px

.ft-S
	font-size 13px

.ft-M
  font-size 16px

.ft-L
  font-size 18px

.white
  color white

.black
  color black

.light-gray
  color lightGray

.dark-gray
  color darkGray

.red
  color red

.green
  color green

.minor-title
  margin-bottom 10px
  color         darkGray
  font-size     16px

/********************************************************************************************************************/
/* Ссылки */
/********************************************************************************************************************/
.link
  color           #00b994
  text-decoration none
  border-bottom   1px solid rgba(0, 185, 148, 0.3)
  transition(all 0.2s ease-in-out 0s)

  &:hover
    color: #007b56
    border-color: #c6c6c6

.dark-link
  text-decoration none

  &:hover
    color white

/********************************************************************************************************************/
/* Полосы разделители  */
/********************************************************************************************************************/
.delimiter
  clear             both
  height            1px
  background-color  #636363

  &.__light
    background-color #d7d7d7

  &.__vertical
    width   1px
    height  auto

/********************************************************************************************************************/
/* Вывод полей в формате Имя поля -> значение || input  */
/********************************************************************************************************************/

.prop
  overflow  hidden
  margin    15px 0
  width     100%

  &_name
    width         125px
    padding-right 25px
    font-size     12px
    color         lightGray

  &_name.__block
    display       block
    width         auto

  &_value
    font-size 13px
    color     darkGray

/* значение поля цвет */
.color
  width   40px
  height  40px
  background-color  red
  border-radius(50%)

  &.__select
    cursor  pointer


/********************************************************************************************************************/
/* Таблицы  */
/********************************************************************************************************************/
.table

  &.__width-XL
    width  100%

.td
  vertical-align  middle

  &.__padding-S
    padding 0 10px

  &.__color-title
    padding-right 10px

  &.__gray
    background-color  #e5e5e5

  &.__white
    background-color  white

  &.__radial-first
    border-radius(4px 0 0 4px)

  &.__radial-last
    border-radius(0 4px 4px 0)

  &.__size-M
    box-sizing  border-box
    height      50px
    padding     5px 10px

  &.__delimiter
    height  5px

/********************************************************************************************************************/
/* Стандартный блок SioMarket */
/********************************************************************************************************************/
.slide-block
  margin 10px 0

  &_title
    position    relative
    height      28px
    padding     10px

    font-size   18px
    color       darkGray

    cursor      pointer
    background  #e5e5e5
    border-radius(4px)
    transition(all 0.2s ease-in-out 0s)

    &:hover

      .slide-block_btn
        background-color    #f3f3f3


  &_title.__js-open
    background-color  white

  &_cnt
    margin-top  5px
    padding     0
    background  white
    border-radius(4px)

    .tariff_illustration-w
      padding-top 35px

  &_btn
    position            absolute
    top                 10px
    right               10px

    display             block
    height              28px
    width               28px

    cursor              pointer
    background-color    #d7d7d7
    background-position -6px -96px
    border-radius(4px)
    transition(background-color 0.2s ease-in-out 0s)

    &:hover
      background-color    #f3f3f3

  &_btn.__js-open
    background-color    #d7d7d7
    background-position -6px -6px

    &:hover
      background-color    #f3f3f3

/********************************************************************************************************************/
/* Табы  */
/********************************************************************************************************************/

.tab

  &_lst
    margin  25px 0

  &_i
    display           inline-block
    margin-right      20px
    padding           10px

    cursor            pointer
    color             #959697
    background-color  white

    border-radius(4px)
    transition(all 0.2s ease-in-out 0s)

    &:hover
      color             white
      background-color  #959697

  &_i.__js-act
    color             white
    background-color  #959697
