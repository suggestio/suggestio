@import "mixins"

.social-target
  margin  10px 0
  padding 15px 10px
  background-color  white
  border-radius 10px

  &.__error
    background-color #f4c0c2

  &.__in-process

    .social-target_icon
      background-image url("/vassets/images/market/new-design/social_in-process.gif")
      background-repeat no-repeat
      background-position center

  &_name
    float left
    box-sizing border-box
    width 70%
    padding-right 25px

  &_option-lst
    border-left 1px solid #e9e9e9
    padding-left 25px
    overflow hidden

  &_option
    margin 10px
    display block

  &_title
    margin 10px 0
    font-size 16px
    color #464646

  &_status
    margin 10px 0
    font-size 12px
    color #707070

  &_icon
    float left
    width 90px
    height  70px

  &_info
    overflow  hidden


.add-target
  margin-top  15px
  margin-left 10px
  margin-bottom 35px
