@import "mixins"

::-webkit-input-placeholder
  color #aaaaaa

::-moz-placeholder
  color   #aaaaaa
  opacity 1

:-ms-input-placeholder
  color #aaaaaa

.input
  background  none /* TODO убрать эти стили после отключения common.css */
  border      none
  padding     0

  input,
  textarea
    outline             none
    width               100%
    padding             8px

    color               #7f7f7f
    font-family         'opensans-light'
    font-size           13px
    text-overflow       ellipsis

    border              1px solid #acacac
    box-sizing          border-box
    resize              none
    background-color    transparent
    appearance(none)
    border-radius(3px)

    &:focus
      color         #444444
      border-color  #464646

  input:-webkit-autofill,
  textarea:-webkit-autofill
    -webkit-box-shadow 0 0 0 1000px white inset

  &.__error

    input,
    textarea
      border-color  #f44040
      color         #f44040
