      text-align: center


  /*************************/
  /* Общие кнопки в хидере */
  /*************************/
  .back-close-button
    position: absolute
    left: 15px
    top: 10px
    z-index: 1002
    overflow: hidden
    width: 25px
    height: 27px
    .cb-i
      width: 50px
      height: 27px
    a
      display: block
      float: left
      width: 25px
      height: 27px
      background: spriteurl no-repeat left 3px
      background-size: spritesize
    a:active
      margin-top: 1px

    a.close
      background-position: -54px top

  .categories-button
    position: absolute
    right: 15px
    top: 10px
    z-index: 1002
    a
      width: 25px
      height: 25px
      display: block
      background: spriteurl no-repeat left top
      background-size: spritesize
      background-position: -27px 0px
    a:active
      margin-top: 1px
  .sm-button
    display: block
    color: #fff
    border: 5px #fff solid
    font-size: 30px 
    padding: 15px 10px
    font-family: 'pfdintextcomppro-medium-webfont'
    text-decoration: none
    text-align: center
    cursor: pointer

  /*******************************************/
  /* Кнопочки-контроллеры слайдов с офферами */
  /*******************************************/
  .sm-offers-controller
    position: absolute
    width: 28px
    height: 14px
    left: 50%
    bottom: 10px
    margin-left: -14px
    z-index: 1002

    a
      display: block
      width: 14px
      height: 14px
      float: left
      span
        display: block
        width: 8px
        height: 8px
        margin-left: 3px
        margin-top: 3px
        background: #000
        border-radius( 50px )
        border: 1px #fff solid

    a.active
      cursor: default
      span
        background: red

  /*****************************/
  /* Экран с выбором категории */
  /*****************************/
  .sm-categories-screen
    display: none
    position: absolute
    left: 0px
    top: 0px
    width: 100%
    height: 100%
    background: #ce2222
    background-color: rgb(206, 34, 34)
    z-index: 1003

    .search-bar
      height: 44px
      border-bottom: rgba(0,0,0,0.5)

      .sb-back-icon,
      .sb-search-icon
        background: spriteurl -85px -2px
        background-size: spritesize
        width: 44px
        height: 44px
        float: left
        cursor: pointer

      .sb-search-field
        height: 39px
        background: #fff
        margin-left: 44px
        margin-right: 44px
        padding-top: 5px

        .sb-sf-container
          height: 32px
          background: #e3e8ea
          border: 1px #bcc2c6 solid

        input
          height: 32px
          background: none
          border: 0px
          color: #bcc2c6
          width: 90%
          padding-left: 15px
          outline: none
          font-family : 'pfdintextcomppro-medium-webfont'
          font-size: 15px

      .sb-search-icon
        float: right
        margin-top: -44px
        background: spriteurl -130px -2px
        background-size: spritesize

      .sb-back-icon:active
        background-position: -85px -1px
      .sb-search-icon:active
        background-position: -130px -1px


    .sm-categories-list
      .sm-single-categorie
        color: #fff
        font-family : 'pfdintextcomppro-medium-webfont'
        font-size: 18px

  /******************************/
  /* Экран со списком магазинов */
  /******************************/
  .sm-shopList-screen
    display: none
    position: absolute
    left: 0px
    top: 0px
    width: 100%
    height: 100%
    background: #e3e8ea
    z-index: 1004
    overflow: scroll

    .search-bar
      height: 44px
      border-bottom: rgba(0,0,0,0.5)
      background: #ce2222

      .sb-back-icon,
      .sb-search-icon
        background: spriteurl -85px -2px
        background-size: spritesize
        width: 44px
        height: 44px
        float: left
        cursor: pointer

      .sb-search-field
        height: 39px
        background: #fff
        margin-left: 44px
        margin-right: 44px
        padding-top: 5px

        .sb-sf-container
          height: 32px
          background: #e3e8ea
          border: 1px #bcc2c6 solid

        input
          height: 32px
          background: none
          border: 0px
          color: #bcc2c6
          width: 90%
          padding-left: 15px
          outline: none
          font-family : 'pfdintextcomppro-medium-webfont'
          font-size: 15px

      .sb-search-icon
        float: right
        margin-top: -44px
        background: spriteurl -130px -2px
        background-size: spritesize

      .sb-back-icon:active
        background-position: -85px -1px
      .sb-search-icon:active
        background-position: -130px -1px

    .sm-shops-list
      width: 960px
      margin: 0 auto
      .item
        float: left
        width: 310px
        margin: 0 5px
        padding-top: 25px
        font-family: 'pfdintextcomppro-medium-webfont'
        border-bottom: 1px solid #bcc2c6
        .letter
          font-size: 24px
          padding-bottom: 5px
          padding-left: 15px
        .shop
          display: block
          padding: 10px 15px
          font-size: 12px
          color: black
          text-decoration: none
          cursor: pointer

  /**************************************************/
  /* Экран с предупредлением о выходе из Sio.Market */
  /**************************************************/
  .sm-close-screen
    display: none
    position: absolute
    width: 100%
    height: 100%
    left: 0px
    top: 0px
    background: rgba(0,0,0,0.85)
    z-index: 10004
    font-family : 'pfdintextcomppro-medium-webfont'
    font-size: 30px
    text-align: center

    p
      padding: 0px
      margin: 20px 0px
      font-size: 30px

    .es-container
      position: absolute
      width: 603px
      left: 50%
      top: 50%
      margin-left: -301px
      margin-top: -250px
      color : #fff

    strong
      display: block
      font-size: 72px

    .sm-button
      float: left
      width: 260px

    .sm-button.sm-close-button
      margin-right: 23px
      color: #ec7676
      border-color: #ec7676

  /********************************/
  /* Оффер ( рекламная карточка ) */
  /********************************/
  .sm-offer
    position: absolute
    overflow: hidden
    width: 100%
    height: 100%

  .sm-offer.animated
    transition( all 0.5s ease )

  .sm-offer.rtl-in
    transform( translate3d(100%,0,0) )
  .sm-offer.rtl-out
    transform( translate3d(-100%,0,0) )

  .sm-offer.ltr-in
    transform( translate3d(-100%,0,0) )
  .sm-offer.ltr-out
    transform( translate3d(100%,0,0) )

  .sm-hidden-offer
    left: -100%

  .offer-header
    position: absolute
    z-index: 1002
    width: 100%
    height: 44px
    border-top: 1px rgba(255,255,255,0.5) solid
    border-bottom: 1px rgba(0,0,0,0.5) solid
    background: #cf3737
    opacity: 0.95

    .sm-offer-logo
      display: block
      margin: 8px auto 0px auto
    
  .offer-details
    position: absolute
    left: 0px
    top: 0px
    width: 350px
    height: 100%
    background: rgba(0,0,0,0.8)
    z-index: 1001
    color: #fff 
    font-size: 26px
    font-family: 'pfdintextcomppro-medium-webfont'

    .od-inner
      padding: 85px 40px

    .vendor
      font-size: 50px
      line-height: 38px
      padding-bottom: 20px

    .old-price
      font-size: 38px
      font-size: 30px

    .new-price
      font-size: 60px

    .offer-location
      position: relative
      font-size: 15px
      padding-left: 39px
      margin: 15px 0px 35px 0px
      min-height: 60px

      .ol-icon
        position: absolute
        left: 0px
        top: 0px
        width: 29px
        height: 57px
        background: spriteurl no-repeat left -27px
        background-size: spritesize



    .sm-button
      font-size: 24px

    .disc-text-1
      font-size: 30px
      font-family: 'pfdintextcomppro-medium-webfont'

    .disc-text-2
      font-size: 30px
      font-family: 'pfdintextcomppro-medium-webfont'

    .discount
      font-size: 72px
      font-family: 'pfdintextcomppro-medium-webfont'
      text-align: center
      background: url('/assets/images/market/discount.png') no-repeat
      background-size: 965px 800px
      padding: 30px 0
      height: 80px
      width: 140px
      letter-spacing: -5px
      span
        padding-left: 5px
        font-size: 30px

  .sm-screen
    overflow: hidden
    .poster-photo
      background: #ccc
      position: absolute
      left: 50%
      top: 50%

  .sm-hidden-screen
    left: -100%

  .sm-screen.animated
    transition( all 0.5s ease )

  .sm-screen.forward-in
    transform( translate3d(150%,0,0) )
  .sm-screen.forward-out
    transform( scale3d(0.8, 0.8, 0.8) )

  .sm-screen.backward-in
    transform( scale3d(0.8, 0.8, 0.8) )
  .sm-screen.backward-out
    transform( translate3d(100%,0,0) )

  /*******************************************/
  /* Навигация для главного экрана выдачи ТЦ */
  /*******************************************/
  .sm-navigation
    display: none
    z-index: 1001
    width: 100%
    height: 129px
    position: absolute
    left: 0px
    bottom: 0px
    transition( all 0.2s linear )

    .sm-buttons
      width: 680px
      height: 100px
      margin: 0px auto

      .sm-button
        background: rgba(255, 255, 255, 0.1)
        width: 282px
        margin: 20px 12px
        float: left
        border-color: #fff
        color: #fff

      .sm-button:hover
        background: rgba(255, 255, 255, 0.3)

  .sm-navigation.hidden
    bottom: -130px

