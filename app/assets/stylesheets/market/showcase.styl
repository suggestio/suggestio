@import 'fonts.styl'
@import 'blocks.styl'

spriteurl = url('/assets/images/sio-market-sprite.png')
spritesize = 400px 100px

sprite2url = url('/assets/images/showcase-v2-sprite-retina.png')
sprite2size = 150px 150px

screenVerticaliPhone = 'only screen and (max-device-width : 568px) and (orientation : portrait)'

default_color_w_opacity = rgba( 48, 48, 48, 0.9 )
default_color = rgba( 48, 48, 48, 1 )

border-radius( param )
  -webkit-border-radius : param
  -moz-border-radius : param
  -o-border-radius : param
  border-radius : param

transform( param )
  -webkit-transform : param
  -moz-transform : param
  -o-transform : param
  transform : param

box-shadow( param )
  -webkit-box-shadow: param
  -moz-box-shadow: param
  box-shadow: param

body,
html
  height: 100%
  width: 100%

*
  padding: 0px
  margin: 0px
  border: 0px

.abs
  position: absolute
  left: 0px
  top: 0px

.hidden
  display: none

.sm-clear
  clear: both

.sm-centered-block
  margin: 0px auto
  position: relative

code
  display: none

.sm-vflex
  display: -webkit-box
  -webkit-box-orient: vertical
  -webkit-box-align: stretch
  -webkit-box-flex:1
  display: -moz-box
  display: -ms-flexbox
  display: -webkit-flex
  display: flex

.sm-overflow-scrolling
  -webkit-overflow-scrolling: touch
  overflow-y: scroll
  margin-bottom: -1px

.sm-block
  position: absolute
  border: 1px #ccc solid
  -webkit-transition: -webkit-transform 0.2s linear

.sm-b-spacer
  position: absolute
  background: #999
  width: 140px
  height: 140px

/*
------------------------------------*/
.fs-animated-start
  -webkit-transform: translate3d(100%,0,0)

.fs-animated-end
  -webkit-transform: translate3d(0,0,0)

.transition-animated
  -webkit-transition: all 0.2s linear

/* Кнопки
------------------------------------*/
.sm-button
  width: 40px
  height: 40px
  cursor: pointer

.sm-flat-btn
  display: block
  text-decoration: none
  padding: 10px
  &.__color-1
    background: #f44040
    color: #fff
  &.__centered
    width: 150px
    text-align: center
    margin: 0px auto
  &.__rounded
    border-radius( 10px )

.sm-showcase
  width: 100%
  heigth: 100%

.sm-producer-header
  height: 50px
  width: 100%
  background: default_color_w_opacity
  z-index: 10
  text-align: center

  &_btn
    &.__left-aligned
      left: 5px
      top: 5px
    &.__right-aligned
      left: auto
      top: 5px
      right: 5px

  &_logo
    padding-top: 10px

  &_exit-button
    display: block

  &_index-button
    display: none

  &.__w-global-cat
    .sm-producer-header_exit-button,
    .sm-producer-header_logo
      display: none

    .sm-producer-header_index-button
      display: block

/*
------------------------------------*/
.sm-close-screen
  display: none
  position: absolute
  left: 0px
  top: 0px
  width: 100%
  height: 100%
  background: rgba(0,0,0,0.5)
  z-index: 100
  font-family: 'opensans-light'
  font-size: 14px
  color: #737373

  &_cnt
    position: absolute
    left: 50%
    top: 50%
    width: 300px
    padding-bottom: 30px
    margin-left: -150px
    border-radius(10px)
    margin-top: -100px
    background: #fff

  &_message
    text-align: center
    padding: 50px 50px 30px 50px

  &_dm
    height: 1px
    background: #d7d7d7
    margin: 25px 0px

.sm-grid-ads
  width: 100%
  height: 100%
  &_content
    position: relative
  &_container
    margin: 0px auto
    position: relative
    overflow: hidden
  &_loader
    width: 100%
    height: 100px
    background: red

/*
------------------------------------*/
.sm-categories-screen
  position: absolute
  left: 0px
  top: 0px
  z-index: 11
  display: none
  width: 100%
  height: 100%

  &.__compact
    width: 300px
    left: 50%

  &.__search-mode
    height: 100px
    overflow: hidden

  &_header
    height: 50px


  &_tabs
    height: 54px
    background: default_color_w_opacity
  &_tabs-wrapper
    position: relative
    padding: 0px 22px
  &_single-tab
    width: 50%
    height: 41px
    float: left
    text-align: center
    font-family: 'opensans-regular-webfont'
    font-size: 13px
    cursor: pointer

.sm-tab
  border: 1px transparent solid
  color: #959595
  border-radius(5px)
  padding: 10px 0px
  text-align: center
  &.__active
    border-color: #fff
    color: #fff

.sm-categories
  background: default_color

/*
------------------------------------*/
.sm-search-bar
  height: 50px
  padding: 0px 22px 0px 22px
  background: default_color_w_opacity

  &_field
    border: 1px #636363 solid
    background: default_color_w_opacity
    width: 100%
    height: 34px

  &_wrapper
    padding: 0px 5px

  &_input
    width: 100%
    line-height: 34px
    background: none
    outline: none

/*
------------------------------------*/
.sm-shops
  display: none
  background: default_color

/*
------------------------------------*/
.sm-focused-ads
  position: absolute
  left: 0px
  top: 0px
  z-index: 15
  width: 100%
  height: 100%
  display: none
  overflow: hidden
  background: rgba(255,255,255,0.8) url('/assets/images/market-showcase-popup-bg.png')
  box-shadow( 0px 0px 10px #000 )
  &_container
    width: 100%
    height: 100%
    &.__animated
      -webkit-transition: all 0.2s linear

.focused-ad
  float: left

  &_top-offset,
  &_bottom-offset
    height: 70px

  &_offer
    background: #fff
    padding: 11px

  &_location
    position: relative
    background: #fff
    margin: 2px 0px
    padding: 11px

  &_location-icon
    width: 19px
    height: 37px
    background: url("/assets/images/sio-market-sprite.png") -204px -6px
    background-size: 400px 100px
    float: left
    padding-right: 11px

  &_location-info
    font-family: 'PFDinTextCompPro-Medium'
    font-size: 14px

  &_count
    position: absolute
    right: 8px
    top: 16px
    border-radius: 50px
    color: #fff
    padding: 16px 0px
    width: 50px
    text-align: center
    margin-top: -12px
    background: rgba(0,0,0,0.8)
    font-family: 'PFDinTextCompPro-Medium'
    font-size: 15px

  &_descr
    font-family: Arial
    font-size: 16px
    line-height: 20px
    padding: 40px

/* Media
------------------------------------*/
@media screenVerticaliPhone
  .sm-search-bar
    padding-left: 11px
    padding-right: 11px

  .sm-categories-screen
    &_tabs-wrapper
      padding-left: 11px
      padding-right: 11px