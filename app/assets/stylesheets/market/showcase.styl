    position: absolute
    right: 10px
    top: 11px
    display: block
    width: 26px
    height: 26px
    background: spriteurl -139px -12px
    background-size: spritesize
    cursor: pointer

  .sm-search-bar__icon:active
    background-position: -139px -11px

.sm-welcome-ad
  position: absolute
  left: 50%
  top: 50%
  z-index: 1000000

.sm-welcome-ad__img
  -webkit-transition: opacity 0.7s linear
  -moz-transition: opacity 0.7s linear

.sm-welcome-ad__img_fade-out
  opacity: 0

.sio-mart-showcase

  .categories-button,
  .sio-mart-home-button
    position: absolute
    right: 0px
    top: 0px
    z-index: 1002
    padding: 12px 15px 14px 15px
    span
      cursor: pointer
      width: 25px
      height: 25px
      display: block
      background: spriteurl no-repeat left top
      background-size: spritesize
      background-position: -27px 0px
    span:active
      margin-top: 1px
  .sm-button
    display: block
