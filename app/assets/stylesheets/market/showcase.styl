@import 'fonts.styl'
@import 'blocks.styl'

spriteurl = url('/assets/images/sio-market-sprite.png')
spritesize = 400px 100px

sprite2url = url('/assets/images/showcase-v2-sprite-retina.png')
sprite2size = 150px 150px

border-radius( param )
  -webkit-border-radius : param
  -moz-border-radius : param
  -o-border-radius : param
  border-radius : param

transform( param )
  -webkit-transform : param
  -moz-transform : param
  -o-transform : param
  transform : param

box-shadow( param )
  -webkit-box-shadow: param
  -moz-box-shadow: param
  box-shadow: param

body,
html
  height: 100%
  width: 100%

*
  padding: 0px
  margin: 0px
  border: 0px

.abs
  position: absolute
  left: 0px
  top: 0px

.hidden
  display: none

.sm-clear
  clear: both

.sm-hidden-body
  background: yellow

.sm-centered-block
  margin: 0px auto
  position: relative

code
  display: none

.sm-vflex
  display: -webkit-box
  -webkit-box-orient: vertical
  -webkit-box-align: stretch
  -webkit-box-flex:1
  display: -moz-box
  display: -ms-flexbox
  display: -webkit-flex
  display: flex

.sm-overflow-scrolling
  -webkit-overflow-scrolling: touch
  overflow-y: scroll
  margin-bottom: -1px

.sm-block
  position: absolute
  -webkit-transition: -webkit-transform 0.2s linear

/* Кнопки
------------------------------------*/
.sm-button
  width: 40px
  height: 40px
  background: #fff

.sm-showcase
  width: 100%
  heigth: 100%

.sm-producer-header
  height: 50px
  width: 100%
  background: rgba( 27, 58, 66, 0.9 )
  z-index: 10
  text-align: center

  &_exit-button
    display: block

  &_index-button
    display: none

  &.__w-global-cat
    .sm-producer-header_exit-button,
    .sm-producer-header_logo
      display: none

    .sm-producer-header_index-button
      display: block

/*
------------------------------------*/
.sm-close-screen
  display: none
  position: absolute
  left: 0px
  top: 0px
  width: 100%
  height: 100%
  background: rgba(0,0,0,0.5)
  z-index: 100

  &_cnt
    position: absolute
    left: 50%
    top: 50%
    width: 300px
    margin-left: -150px
    background: #fff

.sm-grid-ads
  &_content
    position: relative
  &_container
    margin: 0px auto
    position: relative
  &_loader
    width: 100%
    height: 100px
    background: red

/*
------------------------------------*/
.sm-categories-screen
  position: absolute
  left: 0px
  top: 0px
  z-index: 11
  display: none
  width: 100%
  height: 100%
  background: #2e5c69

  &.__compact
    width: 300px
    left: 50%

  &_header
    height: 50px
    background: olive
    opacity: .5

  &_tabs
    height: 50px
  &_single-tab
    width: 50%
    height: 50px
    float: left
    background: yellow

/*
------------------------------------*/
.sm-search-bar
  height: 50px
  background: red

/*
------------------------------------*/
.sm-shops
  display: none


/*
------------------------------------*/
.sm-focused-ads
  position: absolute
  left: 0px
  top: 0px
  z-index: 15
  width: 100%
  height: 100%
  display: none
  background: red

  &_container
    width: 100%
    height: 100%
    background: yellow