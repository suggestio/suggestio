@import 'fonts.styl'
@import 'categories.styl'

spriteurl = url('/assets/images/sio-market-sprite.png')
spritesize = 300px 100px

border-radius( param )
  -webkit-border-radius : param
  -moz-border-radius : param
  -o-border-radius : param
  border-radius : param

transform( param )
  -webkit-transform : param
  -moz-transform : param
  -o-transform : param
  transform : param

transition( param )
  -webkit-transition: param
  -moz-transition: param
  -o-transition: param
  transition: param

.sm-preload
  width: 1px
  height: 1px
  overflow: hidden
  position: absolute
  left : -1px
  top: -1px

.sm-notification
  display: none
  background: rgba(0, 0, 0, 0.8)
  width: 100%
  height: 100%
  position: absolute
  left: 0px
  top: 0px
  z-index: 100001
  color: #fff
  font-family: 'pfdintextcomppro-medium-webfont'

  .data
    position: absolute
    top: 50%
    width: 100%
    text-align: center
    margin-top: -50px
    font-size: 20px

.sio-mart-showcase

  img
    margin: 0px
    border: 0px

  /* Хидер ТЦ / Ресторана / ... */
  .sio-mart__producer-header
    position: absolute
    left: 0px
    top: 0px
    width: 100%
    height: 30px
    padding: 10px 0px
    text-align: center
    z-index: 10
    -webkit-box-shadow: 1px 1px 2px #222

  /* Офферы на главной странице выдачи */
  .sio-mart__index-offers
    position: relative
    width: 100%
    height: 100%
    overflow-y: scroll
    -webkit-overflow-scrolling: touch
    padding-top: 60px

  .sio-mart__index-offers__container
    margin: 0px auto

  .sio-mart__single-offer
    background-color: #fff
    position: absolute
    cursor: pointer

  .sio-mart__node-offers-root
    position: absolute
    left: 0px
    top: 0px
    width: 100%
    height: 100%
    z-index: 1003
    display: none

  .sio-mart__node-offers
    z-index: 1003
    position: absolute
    left: 0px
    top: 0px
    width: 100%
    height: 100%
    background: rgba(255,255,255,0.8)

  .sio-mart__node-offers__scrollable_container
    height: 100%
    width: 100%
    overflow-y: scroll
    -webkit-overflow-scrolling: touch

  .sio-mart__node-offers__block_container
    margin: 0px auto

    .sm-block
      cursor: default
      -webkit-box-shadow: 0px 0px 3px #999
      position: relative
      display: none

  .sio-mart__producer-popup-location
    position: relative
    text-align: center
    padding: 75px 0px 25px 0px
    margin: 0px auto

    .icon
      position: absolute
      left: -30px
      top: -4px
      background: url('/assets/images/geo-marker-black.png') no-repeat left top
      width: 16px
      height: 35px
      background-size: 16px 35px
    .data
      position: relative
      font-family: 'pfdintextcomppro-medium-webfont'
      font-size: 26px
      line-height: 26px

  .sio-mart__node-offers_spacer
    height: 60px

  /* Кружочки навигации по слайдам */
  .sio-mart__node-offers_nav
    height: 8px
    margin: 0px auto
    padding: 15px 0px

  .sm-nav-block
    height: 8px

  .sm-nav-block__pointer
    cursor: pointer
    float: left
    margin: 3px

    i
      display: block
      width: 8px
      height: 8px
      background: #3b3b3b
      border-radius( 50px )

  .sm-nav-block__pointer_active
    cursor: default
    i
      background-color: #ce2222


.sio-mart-showcase
  position: absolute
  left: 0px
  top: 0px
  width: 100%
  height: 100%
  z-index: 1000

.sio-mart-showcase
  position: fixed
  background: rgba(255, 255, 255, 0.97)

.index-welcome-ad
  position: absolute
  left: 50%
  top: 50%
  z-index: 1000000

.sio-mart-showcase
  /*************************/
  /* Общие кнопки в хидере */
  /*************************/
  .back-close-button
    position: absolute
    left: 15px
    top: 10px
    z-index: 1002
    overflow: hidden
    width: 25px
    height: 27px
    .cb-i
      width: 50px
      height: 27px
    span
      display: block
      cursor: pointer
      float: left
      width: 25px
      height: 27px
      background: spriteurl no-repeat left 3px
      background-size: spritesize
    span:active
      margin-top: 1px

    span.close
      background-position: -54px top

  .categories-button
    position: absolute
    right: 15px
    top: 10px
    z-index: 1002
    span
      cursor: pointer
      width: 25px
      height: 25px
      display: block
      background: spriteurl no-repeat left top
      background-size: spritesize
      background-position: -27px 0px
    span:active
      margin-top: 1px
  .sm-button
    display: block
    color: #fff
    border: 5px #fff solid
    font-size: 30px 
    padding: 15px 10px
    font-family: 'pfdintextcomppro-medium-webfont'
    text-decoration: none
    text-align: center
    cursor: pointer

  /*****************************/
  /* Экран с выбором категории */
  /*****************************/
  .sm-categories-screen
    display: none
    position: absolute
    left: 0px
    top: 0px
    width: 100%
    height: 100%
    background: #ce2222
    background-color: rgb(206, 34, 34)
    z-index: 1003

    .sm-categories-list
      .sm-single-categorie
        color: #fff
        font-family : 'pfdintextcomppro-medium-webfont'
        font-size: 18px

  /******************************/
  /* Экран со списком магазинов */
  /******************************/
  .sm-shopList-screen
    display: none
    position: absolute
    left: 0px
    top: 0px
    width: 100%
    height: 100%
    background: #e3e8ea
    z-index: 1004
    overflow: scroll

    .search-bar
      height: 44px
      border-bottom: rgba(0,0,0,0.5)
      background: #ce2222

      .sb-back-icon,
      .sb-search-icon
        background: spriteurl -85px -2px
        background-size: spritesize
        width: 44px
        height: 44px
        float: left
        cursor: pointer

      .sb-search-field
        height: 39px
        background: #fff
        margin-left: 44px
        margin-right: 44px
        padding-top: 5px

        .sb-sf-container
          height: 32px
          background: #e3e8ea
          border: 1px #bcc2c6 solid

        input
          height: 32px
          background: none
          border: 0px
          color: #bcc2c6
          width: 90%
          padding-left: 15px
          outline: none
          font-family : 'pfdintextcomppro-medium-webfont'
          font-size: 15px

      .sb-search-icon
        float: right
        margin-top: -44px
        background: spriteurl -130px -2px
        background-size: spritesize

      .sb-back-icon:active
        background-position: -85px -1px
      .sb-search-icon:active
        background-position: -130px -1px

    .sm-shops-list
      width: 960px
      margin: 0 auto
      .item
        float: left
        width: 310px
        margin: 0 5px
        padding-top: 25px
        font-family: 'pfdintextcomppro-medium-webfont'
        border-bottom: 1px solid #bcc2c6
        .letter
          font-size: 24px
          padding-bottom: 5px
          padding-left: 15px
        .shop
          display: block
          padding: 10px 15px
          font-size: 12px
          color: black
          text-decoration: none
          cursor: pointer

  /**************************************************/
  /* Экран с предупредлением о выходе из Sio.Market */
  /**************************************************/
  .sm-close-screen
    display: none
    position: absolute
    width: 100%
    height: 100%
    left: 0px
    top: 0px
    background: rgba(0,0,0,0.85)
    z-index: 10004
    font-family : 'pfdintextcomppro-medium-webfont'
    font-size: 30px
    text-align: center

    p
      padding: 0px
      margin: 20px 0px
      font-size: 30px

    .es-container
      position: absolute
      width: 603px
      left: 50%
      top: 50%
      margin-left: -301px
      margin-top: -250px
      color : #fff

    strong
      display: block
      font-size: 72px

    .sm-button
      float: left
      width: 260px

    .sm-button.sm-close-button
      margin-right: 23px
      color: #ec7676
      border-color: #ec7676

  /*******************************************/
  /* Навигация для главного экрана выдачи ТЦ */
  /*******************************************/
  .sm-navigation
    display: none
    z-index: 1001
    width: 100%
    height: 129px
    position: absolute
    left: 0px
    bottom: 0px
    transition( all 0.2s linear )

    .sm-buttons
      width: 680px
      height: 100px
      margin: 0px auto

      .sm-button
        background: rgba(255, 255, 255, 0.1)
        width: 282px
        margin: 20px 12px
        float: left
        border-color: #fff
        color: #fff

      .sm-button:hover
        background: rgba(255, 255, 255, 0.3)

  .sm-navigation.hidden
    bottom: -130px

.sio-mart-trigger
  cursor: pointer
  position: fixed
  left: 2px
  top: 2px
  background: rgba(0,0,0,0.5)
  color: #fff
  padding: 10px
  font-family : 'pfdintextcomppro-medium-webfont'

@import 'blocks.styl'