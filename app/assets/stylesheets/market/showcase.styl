@import 'fonts.styl'
@import 'categories.styl'

spriteurl = url('/assets/images/sio-market-sprite.png')
spritesize = 150px 100px


border-radius( param )
  -webkit-border-radius : param
  -moz-border-radius : param
  -o-border-radius : param
  border-radius : param

transform( param )
  -webkit-transform : param
  -moz-transform : param
  -o-transform : param
  transform : param

transition( param )
  -webkit-transition: param
  -moz-transition: param
  -o-transition: param
  transition: param

.sio-mart-layout,
.sio-mart-layout .sm-screen,
.sio-mart-layout .sm-offers
  position: absolute
  left: 0px
  top: 0px
  width: 100%
  height: 100%
  z-index: 1000

.sio-mart-layout
  position: fixed
  background: rgba(200,200,200,0.95)

.sio-mart-layout,
.ads-list,
.ad-preview

  /*************************/
  /* Общие кнопки в хидере */
  /*************************/
  .back-close-button
    position: absolute
    left: 15px
    top: 14px
    z-index: 1002
    overflow: hidden
    width: 25px
    height: 27px
    .cb-i
      width: 50px
      height: 27px
    a
      display: block
      float: left
      width: 25px
      height: 27px
      background: spriteurl no-repeat left 3px
      background-size: spritesize
    a:active
      margin-top: 1px

    a.close
      background-position: -54px top

  .categories-button
    position: absolute
    right: 15px
    top: 15px
    z-index: 1002
    a
      display: block
      width: 25px
      height: 25px
      background: spriteurl no-repeat left top
      background-size: spritesize
      background-position: -27px 0px
    a:active
      margin-top: 1px
  .sm-button
    display: block
    color: #fff
    border: 5px #fff solid
    font-size: 30px
    padding: 15px 10px
    font-family: 'pfdintextcomppro-medium-webfont'
    text-decoration: none
    text-align: center

  /*******************************************/
  /* Кнопочки-контроллеры слайдов с офферами */
  /*******************************************/
  .sm-offers-controller
    position: absolute
    width: 28px
    height: 14px
    left: 50%
    bottom: 10px
    margin-left: -14px
    z-index: 1002

    a
      display: block
      width: 14px
      height: 14px
      float: left
      span
        display: block
        width: 8px
        height: 8px
        margin-left: 3px
        margin-top: 3px
        background: #000
        border-radius( 50px )
        border: 1px #fff solid

    a.active
      cursor: default
      span
        background: red

  /*****************************/
  /* Экран с выбором категории */
  /*****************************/
  .sm-categories-screen
    display: none
    position: absolute
    left: 0px
    top: 0px
    width: 100%
    height: 100%
    background: #ce2222
    background-color: rgb(206, 34, 34)
    z-index: 1003

    .search-bar
      background: #fff
      height: 44px
      border-bottom: rgba(0,0,0,0.5)

    .sm-categories-list
      .sm-single-categorie
        color: #fff
        font-family : 'futurfutc-webfont'
        font-size: 18px

  /**************************************************/
  /* Экран с предупредлением о выходе из Sio.Market */
  /**************************************************/
  .sm-close-screen
    display: none
    position: absolute
    width: 100%
    height: 100%
    left: 0px
    top: 0px
    background: rgba(0,0,0,0.7)
    z-index: 10004
    font-family : 'futurfutc-webfont'
    font-size: 30px
    text-align: center

    p
      padding: 0px
      margin: 20px 0px
      font-size: 30px

    .es-container
      position: absolute
      width: 603px
      left: 50%
      top: 50%
      margin-left: -301px
      margin-top: -250px
      color : #fff

    strong
      display: block
      font-size: 72px

    .sm-button
      float: left
      width: 260px

    .sm-button.sm-close-button
      margin-right: 23px
      color: #ec7676
      border-color: #ec7676
  /********************************/
  /* Оффер ( рекламная карточка ) */
  /********************************/
  .sm-offer
    position: absolute
    overflow: hidden
    width: 100%
    height: 100%

  .sm-offer.animated
    transition( all 0.5s ease )

  .sm-offer.rtl-in
    transform( translate3d(100%,0,0) )
  .sm-offer.rtl-out
    transform( translate3d(-100%,0,0) )

  .sm-offer.ltr-in
    transform( translate3d(-100%,0,0) )
  .sm-offer.ltr-out
    transform( translate3d(100%,0,0) )

  .sm-hidden-offer
    left: -100%

  .offer-header
    position: absolute
    z-index: 1002
    width: 100%
    height: 50px
    border-top: 1px rgba(255,255,255,0.5) solid
    border-bottom: 1px rgba(0,0,0,0.5) solid
    background: #cf3737
    opacity: 0.95

    .sm-offer-logo
      display: block
      margin: 8px auto 0px auto
    
  .offer-details
    position: absolute
    left: 0px
    top: 0px
    width: 350px
    height: 100%
    background: rgba(0,0,0,0.8)
    z-index: 1001
    color: #fff
    font-size: 30px
    font-family: 'futurfutc-webfont'

    .od-inner
      padding: 84px 40px

    .old-price
      font-size: 48px
    .new-price
      font-size: 72px

    .offer-location
      font-size: 15px
      background: spriteurl no-repeat left -27px
      background-size: spritesize
      padding-left: 39px
      margin: 15px 0px 35px 0px
      min-height: 60px

    .sm-button
      font-size: 24px

  .sm-screen
    overflow: hidden
    .poster-photo
      position: absolute
      left: 50%
      top: 50%

  /*******************************************/
  /* Навигация для главного экрана выдачи ТЦ */
  /*******************************************/
  .sm-navigation
    z-index: 1001
    width: 100%
    height: 129px
    position: absolute
    left: 0px
    bottom: 0px
    background: rgba(255,255,255,0.8)

    .sm-buttons
      width: 680px
      height: 100px
      margin: 0px auto

      .sm-button
        width: 282px
        margin: 20px 12px
        float: left
        border-color: #cf3737
        color: #cf3737

.sio-mart-trigger
