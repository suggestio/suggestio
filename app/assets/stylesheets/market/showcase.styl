@import 'fonts.styl'
@import 'blocks.styl'

spriteurl = url('/assets/images/sio-market-sprite.png')
spritesize = 400px 100px

sprite2url = url('/assets/images/showcase-v2-sprite-retina.png')
sprite2size = 150px 150px

screenVerticaliPhone = 'only screen and (max-device-width : 568px)'

default_color_w_opacity = rgba( 48, 48, 48, 0.9 )
default_color = rgba( 48, 48, 48, 1 )

border-radius( param )
  -webkit-border-radius : param
  -moz-border-radius : param
  -o-border-radius : param
  border-radius : param

border-radius-left( param )
  border-top-left-radius            param
  -moz-border-radius-topleft        param
  -webkit-border-top-left-radius    param

  border-bottom-left-radius            param
  -moz-border-radius-bottomleft        param
  -webkit-border-bottom-left-radius    param

border-radius-right( param )
  border-top-right-radius            param
  -moz-border-radius-topright        param
  -webkit-border-top-right-radius    param

  border-bottom-right-radius            param
  -moz-border-radius-bottomright        param
  -webkit-border-bottom-right-radius    param

transform( param )
  -webkit-transform : param
  -moz-transform : param
  -o-transform : param
  transform : param

transform-origin( param )
  -webkit-transform-origin : param
  -moz-transform-origin : param
  -o-transform-origin : param
  transform-origin : param

box-shadow( param )
  -webkit-box-shadow: param
  -moz-box-shadow: param
  box-shadow: param

body,
html
  height: 100%
  width: 100%

*
  padding: 0px
  margin: 0px
  border: 0px

.abs
  position: absolute
  left: 0px
  top: 0px

.hidden
  display: none

.sm-clear
  clear: both

.sm-centered-block
  margin: 0px auto
  position: relative

code
  display: none

.sm-welcome-ad
  position: absolute
  left: 50%
  top: 50%
  z-index: 100
  img
    -webkit-transition: all 0.2s linear
    &.__fade-out
      opacity: 0

.sm-welcome-div
  display           none
  position          absolute
  left              0px
  top               0px
  width             100%
  height            100%
  background        #363636
  z-index           10000
  display           table
  vertical-align    middle
  text-align        center
  -webkit-transition: all 0.2s linear
  &.__fade-out
    opacity: 0
  &_helper
    display         inline-block
    height          100%
    vertical-align  middle



.sm-vflex
  display: -webkit-box
  -webkit-box-orient: vertical
  -webkit-box-align: stretch
  -webkit-box-flex:1
  display: -moz-box
  display: -ms-flexbox
  display: -webkit-flex
  display: flex

.sm-overflow-scrolling
  -webkit-overflow-scrolling: touch
  overflow-y: scroll
  margin-bottom: -1px

.sm-block
  position: absolute
  -webkit-transition: -webkit-transform 0.2s linear

  &.__rel
    position: relative
    margin: 0px auto
    border: 0px

.sm-b-spacer
  position: absolute
  background: #999
  width: 140px
  height: 140px

/*
------------------------------------*/
.fs-animated-start
  -webkit-transform: translate3d(100%,0,0)

.fs-animated-end
  -webkit-transform: translate3d(0,0,0)

.transition-animated
  -webkit-transition: all 0.2s linear

/* Кнопки
------------------------------------*/
.sm-button
  width: 40px
  height: 40px
  cursor: pointer

.sm-flat-btn
  display: block
  text-decoration: none
  padding: 10px
  &.__color-1
    background: #f44040
    color: #fff
  &.__centered
    width: 150px
    text-align: center
    margin: 0px auto
  &.__rounded
    border-radius( 10px )

.sm-showcase
  width: 100%
  heigth: 100%

.sm-producer-header
  height: 50px
  width: 100%
  background: default_color_w_opacity
  z-index: 10
  text-align: center
  -webkit-transform: translate3d(0,0,0)

  &_btn
    &.__left-aligned
      left: 5px
      top: 5px
    &.__right-aligned
      left: auto
      top: 5px
      right: 5px

  &_logo
    padding-top: 10px

  &_icon
    display: none

  &_exit-button
    display: block

  &_index-button
    display: none

  &.__w-global-cat
    .sm-producer-header_exit-button,
    .sm-producer-header_geo-button,
    .sm-producer-header_logo,
    .sm-producer-header_search-button
      display: none!important

    .sm-producer-header_index-button
      display: block

    .sm-producer-header_icon
      display: block

  &.__w-index-icon
    .sm-producer-header_exit-button,
    .sm-producer-header_geo-button,
    .sm-producer-header_logo,
    .sm-producer-header_icon,
    .sm-producer-header_search-button
      display: none!important

    .sm-producer-header_index-button
      display: block

.__header-icon
  display: none
  margin: 0px auto
  height: 40px
  margin-top: 5px

.__sm-restraunts
  .__header-icon.__sm-restraunts-icon
    display: block!important

.__sm-clothing
  .__header-icon.__sm-clothing-icon
    display: block!important

.__sm-electronics
  .__header-icon.__sm-electronics-icon
    display: block!important

.__sm-travel
  .__header-icon.__sm-travel-icon
    display: block!important

.__sm-for-home
  .__header-icon.__sm-for-home-icon
    display: block!important

.__sm-sports
  .__header-icon.__sm-sports-icon
    display: block!important

.__sm-cosmetics
  .__header-icon.__sm-cosmetics-icon
    display: block!important

.__sm-boots
  .__header-icon.__sm-boots-icon
    display: block!important

.__sm-food
  .__header-icon.__sm-food-icon
    display: block!important

.__sm-services
  .__header-icon.__sm-services-icon
    display: block!important

.__sm-spa
  .__header-icon.__sm-spa-icon
    display: block!important

.__sm-banks
  .__header-icon.__sm-banks-icon
    display: block!important

.__sm-fitness
  .__header-icon.__sm-fitness-icon
    display: block!important

.__sm-realestate
  .__header-icon.__sm-realestate-icon
    display: block!important

/*
------------------------------------*/
.sm-close-screen
  display: none
  position: absolute
  left: 0px
  top: 0px
  width: 100%
  height: 100%
  z-index: 100
  font-family: 'opensans-regular-webfont'
  font-size: 14px
  color: #737373

  &_cnt
    position: absolute
    left: 0px
    top: 50px
    width: 100%
    height: 50%
    min-height: 260px
    background: rgba(48, 48, 48,0.95)

  &_exit
    left: 7px
    top: -45px

  &_message
    text-align: center
    padding: 100px 50px 30px 50px

  &_dm
    margin: 25px 0px

.sm-grid-ads
  width: 100%
  height: 100%
  &.__blurred
    -webkit-filter    blur(10px)
  &_content
    position: relative
  &_container
    margin: 0px auto
    position: relative
    overflow: hidden
  &_loader
    width: 100%
    height: 2px
    background: #f2f2f2

/*
------------------------------------*/
.sm-categories-screen
  display     none
  position    absolute
  right       0px
  top         0px
  z-index     11
  width       320px
  height      100%

  &.__compact
    width: 300px
    left: 50%

  &.__search-mode
    height: 120px
    overflow: hidden
    .sm-categories,
    .sm-shops,
    .sm-categories-screen_tabs
      display: none!important

  &_header
    height: 50px
  &_tabs
    width       100%
    height      50px
    background  default_color_w_opacity
  &_tabs-wrapper
    width       230px
    position    relative
    margin      0px auto
    background  red
  &_single-tab
    width       50%
    float       left
    text-align  center
    font-family 'heliosthin'
    font-size   14px
    cursor      pointer

.sm-tab
  color         #343434
  border        1px #c2c2c2 solid
  text-align    center
  background    #c2c2c2
  padding       8px 0px

  &.__rounded-left
    border-radius-left( 3px )

  &.__rounded-right
    border-radius-right( 3px )

  &.__inactive
    background  none!important
    opacity     0.9!important
    color       #959595

.categories-list
  width           320px
  margin          0px auto
  padding-bottom  30px
  &_single-cat
    float         left
    margin-left   7px
    margin-right  7px
    margin-top    25px
    margin-bottom 25px

    &.__no-margin
      margin-left 0px

.categorie
  overflow: hidden
  position: relative
  cursor: pointer
  color: #fff
  font-family: 'opensans-regular-webfont'
  font-size: 13px
  display: block
  text-align: center
  width: 73px
  height: 92px
  margin-left: 15px
  margin-right: 15px
  margin-bottom: 15px

  &_icon
    margin: 0px auto
    display: block
    width: 58px
    height: 58px
    z-index: 10
    svg
      transform( scale3d(0.5,0.5,0.5) )
      transform-origin( 0px 0px )
  &_name
    padding: 0px 0px 10px 0px

.shops-list
  font-family       'opensans-light'
  width             100%
  text-align        center
  color             #b1b0b0
  padding-top       0px
  padding-bottom    50px
  &_letter
    border          1px #fff solid
    border-radius   5px
    display         inline-block
    padding         7px 10px
  &_row
    cursor          pointer
    padding         10px 0px
    font-size       14px
    &.__even
     background     default_color_w_opacity

/*
------------------------------------*/
.sm-geo-screen
  display: none
  position: absolute
  left: 0px
  top: 0px
  width: 320px
  height: 100%
  z-index: 100
  &_header
    height: 50px
  &_search
    height: 55px
  &_search-input
    border: 1px #fff solid
  &_current-location
    padding: 20px 0px
    position: relative
    text-align: center
    color: #fff
    font-family: 'opensans-regular-webfont'
    font-size: 14px
    background: default_color_w_opacity
    cursor: pointer

  &_current-location-inner
    display: inline-block
    position: relative

  &_current-location-icon
    position: absolute
    left: -54px
    top: -26px
    -webkit-transform: scale3d(0.3, 0.3, 0.3)

.sm-geo-nodes
  background: default_color
/*
------------------------------------*/
.sm-search-bar
  height: 35px
  padding: 15px 22px 15px 22px
  background: default_color_w_opacity

  &_field
    position: relative
    border: 1px #636363 solid
    background: default_color_w_opacity
    width: 100%
    height: 34px
    &.__active
      background: #fff!important
      .sm-search-bar_input
        background: #fff

  &_wrapper
    padding: 0px 5px

  &_message
    display: none
    position: absolute
    left: -1px
    bottom: -27px
    line-height: 12px
    font-size: 11px
    padding: 6px
    height: 14px
    background: #f44040
    color: #fff
    font-family: 'opensans-regular-webfont'
    z-index: 10

  &_input
    width: 100%
    line-height: 34px
    background: none
    outline: none
    color: #999

/*
------------------------------------*/
.sm-categories
  background: default_color
.sm-shops
  display: none
  background: default_color


/*
------------------------------------*/
.sm-focused-ads
  position: absolute
  left: 0px
  top: 0px
  z-index: 15
  width: 100%
  height: 100%
  display: none
  overflow: hidden
  box-shadow( 0px 0px 10px #000 )
  &_arrow-label
    position      absolute
    left          -100px
    top           -100px
    z-index       10
    background    #fff
    color         #000
    padding       8px
    border-radius 50px

  &_container
    width: 100%
    height: 100%
    &.__animated
      -webkit-transition: all 0.2s linear

.fad-arrow-label
  cursor          pointer
  &.__left-arrow
    .fad-arrow-label_left-arrow
      display: block
    .fad-arrow-label_right-arrow
      display: none

  &.__right-arrow
    .fad-arrow-label_right-arrow
      display: block
    .fad-arrow-label_left-arrow
      display: none

.focused-ad
  float: left

  &_top-offset,
  &_bottom-offset
    height: 50px

  &_offer
    padding: 0px

  &_location
    position: relative
    background: default_color_w_opacity
    color: #fff
    margin: 2px 0px
    padding: 15px 11px

  &_location-icon
    width: 40px
    height: 37px
    float: left
    padding-right: 0px

  &_location-info
    font-family: 'opensans-regular-webfont'
    font-size: 14px
    float: left
    div
      font-size: 12px

  &_count
    position: absolute
    right: 8px
    top: 19px
    border-radius: 50px
    color: #fff
    padding: 16px 0px
    width: 48px
    height: 16px
    text-align: center
    margin-top: -12px
    font-size: 15px
    border: 2px #fff solid
    font-family: 'opensans-light'
    font-size: 12px

  &_descr
    font-family: Arial
    font-size: 16px
    line-height: 20px
    padding: 40px

/* Media
------------------------------------*/
@media screenVerticaliPhone
  .sm-search-bar
    padding-left: 11px
    padding-right: 11px

  .focused-ad
    &_offer
      padding: 0px
    &_location-info
      max-width 180px