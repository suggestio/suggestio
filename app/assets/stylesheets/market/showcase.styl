  height: 100%
  z-index: 1000

.sio-mart-showcase
  position: fixed
  background: rgba(255, 255, 255, 0.97)

.index-welcome-ad
  position: absolute
  left: 50%
  top: 50%
  z-index: 1000000

.sio-mart-showcase,
.ads-list,
.ad-preview

  .sm-index-offers
    background: #fff
    width: 100%
    height: 100%
    overflow-y: scroll

    .sm-index-offer
