@import "fonts.styl"

.sio-market-showcase,
.sm-screen
  position: absolute
  left: 0px
  top: 0px
  width: 100%
  height: 100%

.sio-market-showcase
  background: #ccc

  .sm-header
    position: absolute
    z-index: 100
    width: 100%
    height: 50px
    border-top: 1px #79b3ac solid
    background: #007366

  .sm-screen
    overflow: hidden
    .poster-photo
      position: absolute
      left: 50%
      top: 50%

  .index-navigation
    width: 100%
    position: absolute
    left: 0px
    bottom: 0px
    background: rgba(255,255,255,0.5)

    a
      margin: 10px 20px
      display: block
      color: #007366
      border: 5px #007366 solid
      font-family: "futuracondensed_medium"
      text-decoration: none