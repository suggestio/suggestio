  .sio-mart-home-button
    left: 70px
    width: 26px
    span
      background-position: -84px -59px

  /*****************************/
  /* Экран с выбором категории */
  /*****************************/
  .sm-categories-screen
    position: absolute
    left: 0px
    top: 0px
    width: 100%
    height: 100%
    z-index: 1003
    overflow: hidden
    display: none

    &.__compact
      height: auto

    &_header
      height: 50px

    &_body-wrap
      height: 100%

    &_body
      max-width: 440px
      margin: 0px auto
      padding-top: 30px

  .sm-single-categorie
    font-family   'PFDinTextCompPro-Medium'
    font-size     18px
    float         left
    margin        20px
    height        150px
    &_icon
      border-radius( 100px )
      border  2px #fff solid
      display block
      width   66px
      height  66px
      background: url('/assets/images/showcase-icons-sprite.png') no-repeat -8px -4px
      background-size: 325px 290px

      &.__sm-travel
        background-position: -11px -216px
      &.__sm-electronics
        background-position: -90px -214px
      &.__sm-sports
        background-position: -170px -1px
      &.__sm-cosmetics
        background-position: -244px -3px
      &.__sm-for-home
        background-position: -244px -111px
      &.__sm-restraunts
        background-position: -8px -112px
      &.__sm-food
        background-position: -93px -112px



    &_name
      text-align: center
      color         #8b8b8b
      padding       20px 0px
      max-width     66px
      font-size     14px
      line-height: 16px
      font-weight   normal
      font-family   'opensans-regular-webfont'


  .sm-single-categorie.disabled
    opacity: 0.4
    cursor: default

  /******************************/
  /* Экран со списком магазинов */
  /******************************/
  .sm-shopList-screen
    display: none
    position: absolute
    left: 0px
    top: 0px
    width: 100%
    height: 100%
    background: #e3e8ea
    z-index: 1004
    overflow: scroll

    .sm-shops-list
      width: 960px
      margin: 0 auto
      padding-top: 50px
      .item
        float: left
        width: 310px
        margin: 0 5px
        padding-top: 25px
        font-family: 'PFDinTextCompPro-Medium'
        .letter
          font-size: 24px
          padding-bottom: 5px
          padding-left: 15px
        .shop
          display: block
          padding: 10px 15px
          font-size: 12px
          color: black
          text-decoration: none
          cursor: pointer

  .sm-shops-list__delimiter
    height: 1px
    width: 100%
    background: #bcc2c6
    clear: both

  /**************************************************/
  /* Экран с предупредлением о выходе из Sio.Market */
  /**************************************************/
  .sm-close-screen
    display: none
    position: absolute 
    width: 100%
    height: 100%
    left: 0px
    top: 0px
    background: rgba(0,0,0,0.65)
    z-index: 10004
    font-family : 'heliosthin'
    font-size: 30px
    text-align: center

    &_cnt
      width: 300px
      margin-left: -150px
      margin-top: -125px
      position: absolute
      left: 50%
      top: 50%
      border-radius( 5px )
      background: #fff
    &_close
      position: absolute
      left: 9px
      top: 9px
      width: 9px
      height: 9px
      background: url("/assets/images/market/new-design/close_retina.png") no-repeat
      background-size: 9px 9px
    &_text
      padding: 70px 20px 55px 20px
      border-bottom: 1px #d7d7d7 solid
      font-family: 'opensans-light'
      font-size: 14px
      color: #737373

    &_buttons
      padding: 25px 0px

