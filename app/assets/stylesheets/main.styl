body
  background: #ececec url('/assets/images/bg.png') center top
  min-width: 500px

.sio-container
  position: relative

.sio-first-row
  padding-top: 50px

.sio-footer-container
  position: fixed
  left: 0px
  bottom: 0px
  width: 100%

.sio-fixed-top-container
  position: fixed
  left: 0px
  top: 0px
  width: 100%

.sio-help-container
  padding-top: 150px

.menu
  width: 100%
  margin-left: 52px
  padding-top: 15px
  
  a,
  span
    text-decoration: none;
    font-family: Arial;
    font-size: 13px!important;
    color: #969696;
    text-shadow: 0px 1px 1px #fff;
  
  a:hover
    color: #328fb0
    text-decoration: underline
  
  .menu-link
    float: left
  .delimiter
    float: left
    width: 1px;
    height: 15px;
    background: #ccc;
    -webkit-box-shadow: 0px 1px 1px #fff;
    margin: 0px 15px;
    
.sio-slogo
  background: url('/assets/images/sio-slogo-en.jpg') no-repeat left top
  width: 419px
  height: 135px
  margin: 20px 10px 10px 52px
  
.sio-first-step
  margin-left: 52px
  margin-top: 20px
  
  .row
    margin: 0px!important
  
  .input
    position: relative
    border: 1px #b4b3b3 solid
    padding: 1px
    background: #fff
    
    .shadow
      border-left: 1px #fbfbfb solid;
      border-right: 1px #fbfbfb solid;
      border-top: 1px #d2d3d3 solid;
      -webkit-border-radius: 2px;
    
    .col-xs-11
      padding: 0px!important
    
    input
      width: 100%
      border: 0px
      outline: none
      color: #328fb0
      padding: 15px 10px
      background: #f6f6f6
    
    .input-shadow
      border-left: 1px #fbfbfb solid
      border-right: 1px #fbfbfb solid
      border-top: 1px #d2d3d3 solid
      -webkit-border-radius: 2px
    
    .http-prefix
      color: #969696
      background: #fff
      text-align: center
      padding: 15px 5px
      
.start-button
  display: block
  width: 50px
  height: 50px
  margin-top: 24px
  
  a
    display: block
    width: 50px
    height: 50px
    background: url('http://suggest.io/static/images2/sio-start-button.png') no-repeat left top
  a:hover
    background-position: -51px top
  a:active
    background-position: -102px top
    
.common-info,
.social
  z-index: 20000
  font-size: 12px
  padding: 25px 0px
  padding-left: 64px


  
// Help
.sio-help-content
  margin-left: 42px
  
.help-topics
  ul li a
    color: #328fb0;
    font-family: Arial;
    font-size: 14px;